<!doctype html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8"/>
    <title><%= @title %> || silo</title>

    <%= stylesheet_link_tag    'silo', media: :all %>
    <%= javascript_include_tag 'silo' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= @body_class.join(' ') %>">
    <div id="wrapper">
      <div id="content">
        <%= flash_all %>
        <h1>
          <%= @title %>
        </h1>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
