<%= render 'sidebar' %>

<div id="main">
  <div>
    <div class="header">
      <div id="filter">
        <%= form_tag partners_path, method: :get do %>
          <div class="row name">
            <div class="company">
              <%= text_field_tag(:company, params[:company],
                                 placeholder: Partner.human_attribute_name(:company)) %>
            </div>
            <div class="business">
              <%= text_field_tag(:business, params[:business],
                                 placeholder: Partner.human_attribute_name(:business)) %>
            </div>
            <div class="country">
              <%= text_field_tag(:country, params[:country],
                                 placeholder: Partner.human_attribute_name(:country)) %>
            </div>
          </div>
          <div class="row q">
            <%= text_field_tag(:q, params[:q], class: 'fulltext',
                               placeholder: Partner.human_attribute_name(:comment)) %>
            <%= submit_tag t('actions.search') %>
          </div>
        <% end %>
      </div>
      <%= paginate @partners %>
      <ul class="tools">
        <li>
          <%= link_to t('actions.print'), url_for(params.merge(format: :pdf)),
                      class: 'icon-print' %>
        </li>
      </ul>
    </div>
    <table class="partners">
      <thead>
        <tr>
          <% [:company, :businesses, :city, :country].each do |col| %>
            <th>
              <%= Partner.human_attribute_name(col) %>
            </th>
          <% end %>
          <th class="attachments">
          </th>
        </tr>
      </thead>
      <tbody>
        <% @partners.each do |partner| %>
          <tr>
            <td>
              <%= link_to '', ajax_list_partner_path(list_id: :current, id: partner, format: :json),
                          'data-id' => partner.id, class: 'listable' %>
              <%= link_to partner.company, partner_path(partner) %>
            </td>
            <td>
              <%= partner.businesses.join(', ') %>
            </td>
            <td>
              <%= partner.city %>
            </td>
            <td>
              <%= partner.country.try(:human) %>
            </td>
            <td class="attachments">
              <% unless partner.attachments.empty? %>
                <%= link_to t('labels.partner.documents'),
                            documents_partner_path(partner),
                            class: 'icon-attachment' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination bottom">
      <%= paginate @partners %>
    </div>
  </div>
</div>

<script>
  $('#filter div.business input')
  .siloMultiSelect('businesses', '<%= ajax_businesses_path %>', {
    selected: <%= arrayified_param(:businesses).to_json.html_safe %>
  });

  $('#filter div.country input')
  .siloMultiSelect('countries', '<%= ajax_areas_path %>', {
    selected: <%= arrayified_param(:countries).to_json.html_safe %>,
    grouped: true
  });

  $('#filter input.fulltext').siloHelp('<%= ajax_help_path id: :fulltext %>');
  $('#main table a.listable').siloListable('partners');
</script>
