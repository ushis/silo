<%= render 'sidebar' %>

<div id="main">
  <%= render 'details_header' %>
  <div class="documents">

    <div class="cvs">
      <% @expert.cvs.each do |cv| %>
        <div class="file">
          <%= link_to cv.language.human, [@expert, cv] %>
          <%= button_to 'x', [@expert, cv], method: :delete %>
          <p>
            <%= l cv.created_at, format: :long %>
          </p>
        </div>
      <% end %>
    </div>
    <div class="attachments">
      <% @expert.attachments.each do |attachment| %>
        <div class="file">
          <%= link_to attachment.title, [@expert, attachment] %>
          <%= button_to 'x', [@expert, attachment], method: :delete %>
          <p>
            <%= l attachment.created_at, format: :long %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="form-wrapper cvs-form">
      <h3>
        Add a CV
      </h3>
      <%= form_for Cv.new, url: expert_cvs_path(@expert) do |f| %>
        <div class="upload">
          <%= f.label :file, t('action.select_file'), class: 'fakefield' %>
          <div class="filename">
            <%= t 'label.no_file_selected' %>
          </div>
          <%= f.file_field :file %>
          <div class="languages">
            <%= f.label :language_id, class: "select-box-label" %>
            <%= f.collection_select :language_id, languages, :id, :human %>
          </div>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="form-wrapper attachments-form">
      <h3>
        Add an Attachment
      </h3>
      <%= form_for Attachment.new, url: expert_attachments_path(@expert) do |f| %>
        <div class="upload">
          <%= f.label :file, t('action.select_file'), class: 'fakefield' %>
          <div class="filename">
            <%= t 'label.no_file_selected' %>
          </div>
          <%= f.file_field :file %>
          <div class="title">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
        </div>
        <%= f.submit %>
      <% end %>
    </div>

  </div>


  <div class="clear"></div>
</div>


<script>
  var filefield = $(':file');
  filefield.change(function(){
    $(this).parent().children('div.filename').text($(this).val().split("\\").pop());
  });
</script>