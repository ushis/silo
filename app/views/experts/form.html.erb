<%= render 'sidebar' %>

<div id="main">
  <div>
    <h2 class="icon-expert-edit">
      <%= @title %>
    </h2>
    <% unless @expert.errors.empty? %>
      <%= render 'shared/validation_errors', model: @expert %>
    <% end %>
    <div class="form-wrapper">
      <%= form_for @expert do |f| %>
        <div class="row main">
          <div class="degree">
            <%= f.label :degree %>
            <%= f.text_field :degree %>
          </div>
        </div>
        <div class="row name">
          <div>
            <%= f.label :prename %>
            <%= f.text_field :prename %>
          </div>
          <div>
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="citizenship">
            <%= f.label :country %>
            <%= f.country_select(:country_id) %>
          </div>
          <div class="birthday">
            <%= f.label :birthday %>
            <%= f.date_select(:birthday, start_year: 1930,
                              end_year: Time.now.year, prompt: true) %>
          </div>
          <div class="gender">
            <%= f.label :gender %>
            <%= f.select :gender, Expert.gender_values %>
          </div>
        </div>
        <div class="row lang">
          <div class="languages">
            <%= f.label :languages %>
            <%= f.multi_select_field :languages %>
          </div>
        </div>
        <div class="row business">
          <div class="job">
            <%= f.label :job %>
            <%= f.text_field :job %>
          </div>
          <div class="fee">
            <%= f.label :fee %>
            <%= f.text_field :fee %>
          </div>
          <div class="former-collaboration">
            <br/>
            <%= f.check_box :former_collaboration %>
            <%= f.label :former_collaboration %>
          </div>
        </div>
        <div class="row">
          <div class="comment">
            <%= f.label :comment, 'data-help' => 'markdown' %>
            <%= f.text_area :comment %>
          </div>
        </div>
        <div class="row">
          <div class="submit">
            <%= f.submit t('actions.save') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
</div>
