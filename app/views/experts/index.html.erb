<%= render 'sidebar' %>

<div id="main">
  <div>
    <div class="header">
      <div id="filter">
        <%= form_tag search_experts_path, method: :get do %>
          <div class="row name">
            <div class="name">
              <%= text_field_tag(:name, params[:name],
                                 placeholder: Expert.human_attribute_name(:name)) %>
            </div>
            <div class="language">
              <%= text_field_tag(:language, nil,
                                 placeholder: Expert.human_attribute_name(:language)) %>
            </div>
            <div class="citizenship">
              <%= text_field_tag(:country, nil,
                                 placeholder: Expert.human_attribute_name(:country)) %>
            </div>
          </div>
          <div class="row q">
            <%= text_field_tag :q, params[:q], placeholder: 'CVs & Comments' %>
            <%= submit_tag t('actions.search') %>
          </div>
        <% end %>
      </div>
      <%= paginate @experts %>
    </div>

    <table class="experts">
      <thead>
        <tr>
          <th>
          </th>
          <% [:name, :prename, :degree, :age, :country, :cv].each do |attr| %>
            <th>
              <%= Expert.human_attribute_name(attr) %>
            </th>
          <% end %>
          <th class="attachments">
          </th>
        </tr>
      </thead>
      <tbody>
        <% @experts.each do |expert| %>
          <tr>
            <td>
            </td>
            <td class="<%= expert.gender %>">
              <%= link_to expert.name, expert_path(expert) %>
            </td>
            <td>
              <%= link_to expert.prename, expert_path(expert) %>
            </td>
            <td>
              <%= expert.degree %>
            </td>
            <td>
              <%= expert.age %>
            </td>
            <td>
              <%= expert.country.try(:human) %>
            </td>
            <td class="cvs">
              <%= list_cvs expert, class: 'icon-cv' %>
            </td>
            <td class="attachments">
              <% unless expert.attachments.empty? %>
                <%= link_to(t('labels.expert.documents'),
                            documents_expert_path(expert),
                            class: 'icon-attachment') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination bottom">
      <%= paginate @experts %>
    </div>
  </div>
</div>

<script>
  $('#filter div.language input')
  .siloMultiSelect('languages[]', <%= param_as_json :languages, Array %>,
      <%= list_languages.to_json.html_safe %>);

  $('#filter div.citizenship input')
  .siloMultiSelect('countries[]', <%= param_as_json :countries, Array %>,
      <%= list_countries.to_json.html_safe %>);
</script>
