<%= render 'sidebar' %>

<div id="main">
  <div>
    <div class="header">
      <h2 class="icon-search">
        <%= t 'label.search' %>
      </h2>
      <div id="filter" class="form-wrapper">
        <%= form_tag search_experts_path, method: :get do %>
          <div class="row">
            <div class="name">
              <%= text_field_tag :name, params[:name], placeholder: t('label.name') %>
            </div>
            <div class="q">
              <%= text_field_tag :q, params[:q], placeholder: 'CVs & Comments' %>
            </div>
          </div>
          <div class="row">
            <div>
              <%= language_select_tag(:language, params[:language],
                                      prompt: t('label.language')) %>
            </div>
            <div>
              <%= country_select_tag(:citizenship, params[:citizenship],
                                     prompt: t('label.citizenship')) %>
            </div>
            <div class="submit">
              <%= submit_tag 'Search' %>
            </div>
          </div>
          <div class="clear"></div>
        <% end %>
      </div>
      <div class="pagination">
        <%= paginate @experts %>
      </div>
    </div>
    
    <table class="experts">
      <thead>
        <tr>
          <th></th>
          <th>
            <%= t 'label.name' %>
          </th>
          <th>
            <%= t 'label.prename' %>
          </th>
          <th>
            <%= t 'label.degree' %>
          </th>
          <th>
            <%= t 'label.age' %>
          </th>
          <th>
            <%= t 'label.citizenship' %>
          </th>
          <th>
            <%= t 'label.cv' %>
          </th>
          <th class="attachments"></th>
        </tr>
      </thead>
      <tbody>
        <% @experts.each do |expert| %>
          <tr>
            <td>
            </td>
            <td class="<%= expert.gender %>">
              <%= link_to expert.name, expert_path(expert) %>
            </td>
            <td>
              <%= link_to expert.prename, expert_path(expert) %>
            </td>
            <td>
              <%= expert.degree %>
            </td>
            <td>
              <%= expert.age %>
            </td>
            <td>
              <%= expert.human_citizenship %>
            </td>
            <td class="cvs">
              <%= list_cvs expert, class: 'icon-cv' %>
            </td>
            <td class="attachments">
              <% unless expert.attachments.empty? %>
                <%= link_to(t('label.documents'), documents_expert_path(expert),
                            class: 'icon-attachment')%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination bottom">
      <%= paginate @experts %>
    </div>
  </div>
</div>
