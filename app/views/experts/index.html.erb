<%= render 'sidebar' %>

<div id="main">
  <div>
    <div id="experts_header" class="header">
      <h2>
        <%= @title %>
      </h2>
      <div id="quicksearch">
        <%= text_field_tag :search, nil, placeholder: t('label.search') %>
        <%= submit_tag t('label.search') %>
      </div>
      <div id="toggle_filter_button" class="button">
        <%= t('label.advanced_search') %>
      </div>
      <div id="filter">
        Filter Form
      </div>
    </div>
    <%= paginate @experts %>
    <table class="experts">
      <thead>
        <tr>
          <th></th>
          <th>
            <%= t 'label.name' %><span></span>
          </th>
          <th>
            <%= t 'label.prename' %><span></span>
          </th>
          <th>
            <%= t 'label.degree' %><span></span>
          </th>
          <th>
            <%= t 'label.age' %><span></span>
          </th>
          <th>
            <%= t 'label.citizenship' %><span></span>
          </th>
          <th>
            <%= t 'label.cv' %><span></span>
          </th>
          <th>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @experts.each do |expert| %>
          <tr>
            <td>
            </td>
            <td class="<%= expert.gender %>">
              <%= link_to expert.name, expert_path(expert) %>
            </td>
            <td>
              <%= link_to expert.prename, expert_path(expert) %>
            </td>
            <td>
              <%= expert.degree %>
            </td>
            <td>
              <%= expert.age %>
            </td>
            <td>
              <%= expert.citizenship %>
            </td>
            <td>
              <%= list_cvs expert %>
            </td>
            <td class="icons">
              <ul>
                <li>
                  <%= link_to t('action.edit'), edit_expert_path(expert), class: 'edit' %>
                </li>
                <li>
                  <%= button_to(t('action.delete'), expert_path(expert),
                              { method: :delete, class: 'delete' }) %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @experts %>
  </div>
</div>

<script>
$(document).ready(function(){
  $('#toggle_filter_button').siloToggler('#filter');
  $('input.delete').siloConfirmDelete();
});
</script>
