/**
 * widgets.css.erb
 *
 * Widget style definitions
 */
/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 16px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #dbdbdb;
  background-color: #3a3a3a;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

div.flash:before,
div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-top: -8px;
  border-width: 8px;
  border-right-color: #4f4f4f;
}

div.flash:after {
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #3a3a3a;
}

div.flash.highlight {
  left: 44px;
}

/* Layer */
div.layer {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .7);
  z-index: 999;
}

/* Pagination */
ul.pagination {
   font-size: .7em;
   position: absolute;
   bottom: 0;
   right: 0;
   padding: 10px 10px 3px 9px;
   background: #F9F9F9;
   border-radius: 4px 0 0 0;
}

ul.pagination li {
  float: left;
  padding: 0 2px;
  margin: 0;
}

ul.pagination li a,
ul.pagination li span {
  color: #999;
  padding: 4px 8px 3px 8px;
  border-radius: 3px;
}

ul.pagination li a:hover {
  cursor: pointer;
  color: #222;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  background-color: rgb(236,236,236);
}

ul.pagination li span {
  color: #444;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  background: #f0f0f0;
}

ul.pagination li span.gap {
  padding: 4px 2px;
  background-color: transparent;
  box-shadow: none;
}

ul.pagination li.back a,
ul.pagination li.next a {
  padding: 4px 10px 3px 10px;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

ul.pagination li.back a {
  margin: 0 3px 0 0;
  background: #f0f0f0 url(<%= asset_data_uri 'icon_back.png' %>) 7px 7px no-repeat;
}

ul.pagination li.next a {
  margin: 0 0 0 3px;
  background: #f0f0f0 url(<%= asset_data_uri 'icon_next.png' %>) 8px 7px no-repeat; 
}

div.pagination.bottom {
  height: 20px;
  margin: 10px 0 0 0;
}

div.pagination.bottom ul.pagination {
  position: static;
  float: right;
  background: transparent;
  border-radius: 0;
  padding: 0 0 3px 8px;
}

/* Validation Errors */
div.validation-errors table {
  margin: -16px 0 16px 0;
}

/* Multi-Lang */
div.multi-lang {
  width: 740px;
}

div.multi-lang > div {
  float: left;
}

div.multi-lang span.more,
div.multi-lang span.delete {
  float: right;
  position: relative;
  cursor: pointer;
  padding: 1px 14px 1px 14px;
  margin-top: 3px;
  margin-left: 5px;
  font-size: .7em;
  font-weight: bold;
  color: #444;
  border: none;
  background: #f0f0f0;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .4);
}

div.multi-lang span.more:hover,
div.multi-lang span.delete:hover {
  color: #222;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);
  background: rgb(236,236,236);
  background: -moz-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -webkit-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -o-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -ms-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: linear-gradient(to bottom, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
}

div.multi-lang span.more {
  float: left;
}

div.multi-lang span.delete {
  padding: 0 8px 2px 8px;
  margin: 3px 2px 0 5px;
  font-size: .7em;
}

div.multi-lang span.more:after,
div.multi-lang span.delete:after {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -4px;
  border-width: 4px;
  border-right-color: rgb(236,236,236);
}

div.multi-lang span.more:before,
div.multi-lang span.delete:before {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 4px;
  border-right-color: rgba(0,0,0,.5);
}

/* Multi Select */
div.multi-select {
  display: none;
  float: left;
  position: fixed;
  top: 100px;
  left: 50%;
  width: 800px;
  margin-left: -400px;
  padding: 10px;
  background-color: #f6f6f6;
  border-radius: 4px;
  z-index: 99999;
}

div.multi-select div.button {
  float: right;
}

div.multi-select div.select {
  float: left;
  width: 100%;
  padding: 15px;
  font-size: .76em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0,0, 0, .2);
  box-sizing: border-box;
}

div.multi-select div.select ul {
  float: left;
  width: 16.6%;
}

div.multi-select div.select input {
  margin-right: 8px;
}

div.multi-select div.select label {
  cursor: pointer;
}
