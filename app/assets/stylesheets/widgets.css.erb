/**
 * widgets.css.erb
 *
 * Widget style definitions
 */
/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 19px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 28px;
  color: #7A7A7A;
  background-color: #2D2D2D;
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .5);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .5);
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .5);
  text-shadow: 0 1px 0 rgba(0, 0, 0, .5);
}


div.flash:before,
div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: -10px;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-left: -1px;
  margin-top: -7px;
  border-width: 6px;
  border-right-color: #222;
}

div.flash:after {
  margin-left: 1px;
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #2e2e2e;
}

div.flash.highlight {
  left: 44px;
}

/* Layer */
div.layer {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 999;
}

/* Pagination */
ul.pagination {
   font-size: .7em;
   position: absolute;
   bottom: 0;
   right: 0;
   padding: 10px 10px 3px 9px;
   background: #FFF;
   border-radius: 4px 0 0 0;
}

ul.pagination li {
  float: left;
  padding: 0 2px;
  margin: 0;
}

ul.pagination li a,
ul.pagination li span {
  color: #999;
  padding: 4px 8px 3px 8px;
  border-radius: 3px;
}

ul.pagination li a:hover {
  cursor: pointer;
  color: #333;
  border: 0 none transparent;
  background: #F5F5F5;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .8);
  border-radius: 3px;
  box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -moz-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
}

ul.pagination li span {
  color: #555;
  text-shadow: 0 1px 0px rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -moz-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
}

ul.pagination li span.gap {
  padding: 4px 2px;
  background-color: transparent;
  box-shadow: none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
}

ul.pagination li.back a,
ul.pagination li.next a {
  color: #555;
  border: 0 none transparent;
  background: #EFEFEF;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .8);
  border-radius: 3px;
  box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -moz-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
  -webkit-box-shadow: 0 0 0 1px rgba(0, 0, 0, .15), inset 0 1px 0 #FFF, 0 2px 0 #FFF;
}

ul.pagination li.back a:hover,
ul.pagination li.next a:hover {
  color: #333;
  background: #F5F5F5;
}

ul.pagination li.back a {
  margin: 0 3px 0 0;
}

ul.pagination li.next a {
  margin: 0 0 0 3px;
}

ul.pagination li.back a:before,
ul.pagination li.next a:before {
  font-family: FontAwesome;
  font-weight: normal;
  font-style: normal;
  display: inline-block;
  text-decoration: inherit;
}

ul.pagination li.back a:before {
  content: "\f0d9";
}

ul.pagination li.next a:before {
  content: "\f0da";
}

div.pagination.bottom {
  height: 20px;
  margin: 10px 0 0 0;
}

div.pagination.bottom ul.pagination {
  position: static;
  float: right;
  background: transparent;
  border-radius: 0;
  padding: 0 0 3px 8px;
}

/* Validation Errors */
div.validation-errors table {
  margin: -16px 0 16px 0;
}

/* Overlay */
div.overlay {
  display: none;
  float: left;
  position: fixed;
  top: 100px;
  left: 50%;
  width: 520px;
  margin: 0 0 0 -265px;
  padding: 10px;
  background-color: #f6f6f6;
  border-radius: 3px;
  box-shadow: 0 0 0 4px #DBDBDB, 0 5px 14px rgba(0, 0, 0, .6);
  -moz-box-shadow: 0 0 0 4px #DBDBDB, 0 5px 14px rgba(0, 0, 0, .6);
  -webkit-box-shadow: 0 0 0 4px #DBDBDB, 0 5px 14px rgba(0, 0, 0, .6);
  z-index: 9999;
}

div.overlay div.header {
  float: left;
  width: 100%;
  margin-bottom: 10px;
  border-radius: 4px 4px 0 0;
}

div.overlay h2 {
  float: left;
  padding: 0;
  font-size: 16px;
  line-height: 27px;
}

div.overlay div.button {
  float: right;
}

div.overlay form.filter input {
  width: 100%;
  margin-bottom: 14px;
}

div.overlay div.form-wrapper {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

div.overlay div.form-wrapper form {
  padding: 0;
}

div.overlay div.form-wrapper form input,
div.overlay div.form-wrapper form textarea,
div.overlay div.form-wrapper form select {
  float: none;
  width: 100%;
}

div.overlay div.form-wrapper form > div {
  margin-bottom: 10px;
}

div.overlay div.form-wrapper form > div:last-child {
  margin-bottom: 0;
}

/* Confirm Dialog */
div.confirm {
  top: 50%;
  left: 50%;
  width: 340px;
  margin: -100px 0 0 -170px;
}

div.confirm div.text {
  clear: both;
  padding: 10px;
  font-size: .76em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

div.confirm input[type=password] {
  width: 100%;
  margin-top: 10px;
  padding: 7px 10px 5px 10px;
  background: #f0f0f0;
  color: #000;
  font-size: 12px;
  line-height: 15px;
  border: none;
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Editable */
a.editable:empty:before {
  content: '-';
}

div.overlay.editable div.error {
  margin: 0 0 6px 0;
  padding: 0;
  font-size: .7em;
  font-weight: bold;
  color: #f66;
}

div.overlay form.error div.message {
  color: #B12525;
  font-size: 12px;
  text-shadow: 0 1px 0 rgba(255, 255, 255, .4);
}

div.overlay form.error input[type="text"] {
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .25), 0 1px 0 #FEFEFE, 0 0 0 1px rgba(0, 0, 0, .025), inset 3px 0 0 #B12525;
  -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .25), 0 1px 0 #FEFEFE, 0 0 0 1px rgba(0, 0, 0, .025), inset 3px 0 0 #B12525;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .25), 0 1px 0 #FEFEFE, 0 0 0 1px rgba(0, 0, 0, .025), inset 3px 0 0 #B12525;
}

/* Help */
div.help {
  position: absolute;
  top: 60px;
  color: #555;
}

div.help dl {
  clear: both;
  padding: 10px;
  font-size: .8em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

div.help dt {
  padding: 0 10px 6px 5px;
}

div.help dd {
  margin-bottom: 15px;
  padding: 8px 10px;
  background-color: rgba(255, 255, 255, .4);
  border-radius: 4px;
}

div.help dd:last-child {
  margin-bottom: 0;
}

div.help dd p {
  padding: 8px 0 0 0;
}

div.help dd p.example {
  padding: 0 0 8px 0;
  font: 12px/16px monospace;
  border-bottom: 1px solid #c8c8c8;
  box-shadow: 0 1px 0 rgba(255, 255, 255, .4);
  -moz-box-shadow: 0 1px 0 rgba(255, 255, 255, .4);
  -webkit-box-shadow: 0 1px 0 rgba(255, 255, 255, .4);
}

/* Multi Select */
div.multi-select {
  width: 800px;
  margin-left: -400px;
}

div.multi-select.countries {
  position: absolute;
  top: 30px;
}

div.multi-select div.select {
  float: left;
  width: 100%;
  padding: 9px 15px;
  font-size: .76em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0,0, 0, .2);
  -moz-box-shadow: inset 0 1px 2px rgba(0,0, 0, .2);
  -webkit-box-shadow: inset 0 1px 2px rgba(0,0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

div.multi-select * {
  outline: 0;
}

div.multi-select h3.ui-accordion-header a {
  clear: left;
  display: block;
  margin: 6px 30px 6px 0;
  padding: 4px 10px;
  color: #444;
  border-radius: 3px;
  background-color: #EFEFEF;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

div.multi-select h3.ui-accordion-header a:hover,
div.multi-select h3.ui-accordion-header.ui-state-active a {
  color: #444;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .2);
  background: rgb(236,236,236);
  background: -moz-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -webkit-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -o-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -ms-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: linear-gradient(top bottom, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
}

div.multi-select h3.ui-accordion-header span.counter {
  position: relative;
  float: right;
  margin: 0 0 0 0;
  padding: 5px 0;
  background-color: #EFEFEF;
  border-radius: 3px;
  width: 25px;
  text-align: center;
  font-size: .9em;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

div.multi-select h3.ui-accordion-header span.counter:before,
div.multi-select h3.ui-accordion-header span.counter:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 4px;
  border-right-color: rgba(0, 0, 0, .2);;
}

div.multi-select h3.ui-accordion-header span.counter:after {
  margin-top: -4px;
  border-right-color: #efefef;
}

div.multi-select div.select > ul {
  clear: left;
  float: left;
  width: 100%;
  padding: 0 0 20px 0;
  margin: 0 5px;
}

div.multi-select div.select > ul:last-child {
  padding-bottom: 0;
}

div.multi-select.countries div.select > ul {
  padding: 6px 8px 10px 8px;
}

div.multi-select div.select > ul > li {
  float: left;
  width: 108px;
  margin: 0 10px;
}

div.multi-select.tags div.select > ul > li {
  width: 162px;
}

div.multi-select.countries div.select > ul > li {
  width: 209px;
}

div.multi-select.countries div.select > ul > li:first-child {
  width: 59px;
  margin: 0;
}

div.multi-select div.select li.item {
  white-space: nowrap;
  overflow: hidden;
}

div.multi-select div.select input {
  margin-right: 8px;
}

div.multi-select div.select label {
  cursor: pointer;
  color: #636363;
  font-size: .9em;
  padding: 0 2px 4px 2px;
  font-weight: normal;
  text-shadow: 0 1px 0 rgba(255, 255, 255, .25);
  cursor: pointer;
}

div.multi-select div.select li.prioritized label {
  color: #505050;
  font-weight: bold;
}

/* Autocomplete */
ul.ui-autocomplete {
  position: absolute;
  max-height: 200px;
  font-size: 12px;
  background-color: #f5f5f5;
  border: 1px solid #d0d0d0;
  border-radius: 3px;
  overflow: auto;
}

ul.ui-autocomplete li a {
  display: block;
  padding: 1px 10px;
  color: #333;
}

ul.ui-autocomplete li a.ui-state-focus,
ul.ui-autocomplete li a.ui-state-active {
  background-color: #e9e9e9;
}

/* jQuery UI accessibility helper */
.ui-helper-hidden-accessible {
  display: none;
}

/* Markdown */
div.markdown,
div.markdown h1,
div.markdown h2,
div.markdown h3,
div.markdown h4,
div.markdown h5,
div.markdown h6,
div.markdown p,
div.markdown blockquote,
div.markdown a,
div.markdown small,
div.markdown strong,
div.markdown b,
div.markdown u,
div.markdown i,
div.markdown center,
div.markdown dl,
div.markdown dt,
div.markdown dd,
div.markdown ol,
div.markdown ul,
div.markdown li,
div.markdown table,
div.markdown tbody,
div.markdown tfoot,
div.markdown thead,
div.markdown tr,
div.markdown th,
div.markdown td,
div.markdown em {
  margin: 0;
  padding: 0;
  border: 0 none transparent;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
  color: #444;
  font: normal normal normal 13px/17px Helvetica, Arial, sans-serif;
}

div.markdown {
  padding-top: 3px;
}

div.markdown h1,
div.markdown h2,
div.markdown h3,
div.markdown h4,
div.markdown h5,
div.markdown h6 {
  text-transform: none !important;
  font-weight: bold;
  padding: 3px 0;
}

div.markdown a {
  text-decoration: underline;
}

div.markdown strong {
  font-weight: bold;
}

div.markdown em {
  font-style: italic;
}

div.markdown ol, div.markdown ul {
  font: normal normal normal 13px/17px Helvetica, Arial, sans-serif;
  list-style-type: square;
  margin: 5px 0 5px 20px;
}

div.markdown ol {
  list-style-type: decimal;
}

div.markdown ol li, div.markdown ul li {
  float: none !important;
  padding: 3px 0 !important;
  border: 0 none transparent !important;
}

div.markdown blockquote:before, div.markdown blockquote:after,
div.markdown q:before, div.markdown q:after {
  content: '';
  content: none;
}

div.markdown table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* Dropdown Menus */

li.toggle-drop-down {
  display: block;
  height: 22px;
  margin-left: 5px;
  padding: 0 10px;
  line-height: 22px;
  color: #6B6B6B;
  text-shadow: 0 1px 0 white;
  font-size: 11px;
  font-weight: normal;
  text-align: center;
  background: #EFEFEF;
  border-radius: 3px;
  border: 1px solid #D2D2D2;
  box-shadow: 0 1px 0 #FBFBFB, inset 0 1px 0 white;
  -moz-box-shadow: 0 1px 0 #FBFBFB, inset 0 1px 0 white;
  -webkit-box-shadow: 0 1px 0 #FBFBFB, inset 0 1px 0 white;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

li.toggle-drop-down > p {
  cursor: pointer;
}

li.toggle-drop-down > p:before {
  margin: 0 3px 0 -2px;
  font-size: 1.25em;
  vertical-align: bottom;
}

li.toggle-drop-down:hover ,
li.toggle-drop-down.active {
  color: #5B5B5B !important;
  background: whiteSmoke !important;
}

li.toggle-drop-down.active ul.dropdown {
  display: block;
}

ul.dropdown {
  display: none;
  position: absolute;
  top: 100%;
  left: -49px;
  margin-top: 7px;
  z-index: 99;
  min-width: 150px;
  border-radius: 4px;
  background: #FFF;
  padding: 5px;
  box-shadow: 0 4px 10px rgba(0,0,0,.25), 0 3px 5px rgba(0,0,0,.25);
  -moz-box-shadow: 0 4px 10px rgba(0,0,0,.25), 0 3px 5px rgba(0,0,0,.25);
  -webkit-box-shadow: 0 4px 10px rgba(0,0,0,.25), 0 3px 5px rgba(0,0,0,.25);
  border: 1px solid #d5d5d5;
  text-align: left !important;
}

ul.dropdown:before,
ul.dropdown:after {
  bottom: 100%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}

ul.dropdown:before {
  border-color: rgba(0, 0, 0, 0);
  border-bottom-color: #d5d5d5;
  border-width: 6px;
  left: 50%;
  margin-left: -6px;
}

ul.dropdown:after {
  border-color: rgba(255, 255, 255, 0);
  border-bottom-color: #FFF;
  border-width: 5px;
  left: 50%;
  margin-left: -5px;
}

ul.dropdown li {
  float: left;
  width: 100%;
}

ul.dropdown li a {
  margin: 3px 0 !important;
  text-align: left !important;
}

ul.dropdown li:last-child a {
  margin-bottom: 0 !important;
}

ul.dropdown li a.icon-file:before {
  color: #FFF;
  text-shadow: 0 0px 1px rgba(0,0,0,.5),0 1px 1px rgba(0,0,0,.25);
  margin-left: -5px;
}

ul.dropdown li a.icon-file:after {
  display: none;
}

ul.dropdown li p {
  margin-left: 4px;
}

body.partners-list ul.dropdown li p.label-experts {
  display: none;
}

body.experts-list ul.dropdown li p.label-partners,
body.experts-list ul.dropdown li p.label-experts,
body.experts-list ul.dropdown li.label-partners,
body.experts-list ul.dropdown li.action-partners {
  display: none;
}

ul.dropdown li:nth-child(n+2) p {
  margin-top: 5px;
}