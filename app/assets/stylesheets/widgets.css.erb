/**
 * widgets.css.erb
 *
 * Widget style definitions
 */
/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 19px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 28px;
  color: #757575;
  background-color: #2E2E2E;
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .5);
  text-shadow: 0 1px 0 rgba(0, 0, 0, .5);
}


div.flash:before,
div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: -10px;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-left: -1px;
  margin-top: -7px;
  border-width: 6px;
  border-right-color: #222;
}

div.flash:after {
  margin-left: 1px;
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #2e2e2e;
}

div.flash.highlight {
  left: 44px;
}

/* Layer */
div.layer {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .7);
  z-index: 999;
}

/* Pagination */
ul.pagination {
   font-size: .7em;
   position: absolute;
   bottom: 0;
   right: 0;
   padding: 10px 10px 3px 9px;
   background: #F9F9F9;
   border-radius: 4px 0 0 0;
}

ul.pagination li {
  float: left;
  padding: 0 2px;
  margin: 0;
}

ul.pagination li a,
ul.pagination li span {
  color: #999;
  padding: 4px 8px 3px 8px;
  border-radius: 3px;
}

ul.pagination li a:hover {
  cursor: pointer;
  color: #222;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .2);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  background-color: rgb(236,236,236);
}

ul.pagination li span {
  color: #444;
  text-shadow: 0 1px 0px rgba(255, 255, 255, 1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
  background: #f0f0f0;
}

ul.pagination li span.gap {
  padding: 4px 2px;
  background-color: transparent;
  box-shadow: none;
}

ul.pagination li.back a,
ul.pagination li.next a {
  color: #666;
  background-color: #f0f0f0;
  padding: 4px 9px 3px 9px;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .8);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

ul.pagination li.back a:hover,
ul.pagination li.next a:hover {
  color: #444;
}

ul.pagination li.back a {
  margin: 0 3px 0 0;
}

ul.pagination li.next a {
  margin: 0 0 0 3px;
}

ul.pagination li.back a:before,
ul.pagination li.next a:before {
  font-family: FontAwesome;
  font-weight: normal;
  font-style: normal;
  display: inline-block;
  text-decoration: inherit;
}

ul.pagination li.back a:before {
  content: "\f0d9";
}

ul.pagination li.next a:before {
  content: "\f0da";
}

div.pagination.bottom {
  height: 20px;
  margin: 10px 0 0 0;
}

div.pagination.bottom ul.pagination {
  position: static;
  float: right;
  background: transparent;
  border-radius: 0;
  padding: 0 0 3px 8px;
}

/* Validation Errors */
div.validation-errors table {
  margin: -16px 0 16px 0;
}

/* Overlay */
div.overlay {
  display: none;
  float: left;
  position: fixed;
  top: 100px;
  left: 50%;
  width: 520px;
  margin-left: -265px;
  padding: 10px;
  background-color: #f6f6f6;
  border: 5px solid #dbdbdb;
  border-radius: 4px;
  z-index: 9999;
}

div.overlay div.header {
  float: left;
  width: 100%;
  margin-bottom: 10px;
  border-radius: 4px 4px 0 0;
}

div.overlay h2 {
  float: left;
  padding: 0;
  font-size: 16px;
  line-height: 27px;
}

div.overlay div.button {
  float: right;
}

/* Confirm Delete */
div.confirm-delete {
  top: 50%;
  left: 50%;
  width: 340px;
  margin: -100px 0 0 -170px;
}

div.confirm-delete div.text {
  clear: both;
  padding: 10px;
  font-size: .76em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

div.confirm-delete input[type=password] {
  width: 100%;
  margin-top: 10px;
  padding: 7px 10px 5px 10px;
  background: #f0f0f0;
  color: #000;
  font-size: 12px;
  line-height: 15px;
  border: none;
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Help */
div.help {
  position: absolute;
  top: 60px;
  color: #555;
}

div.help dl {
  clear: both;
  padding: 10px;
  font-size: .8em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

div.help dt {
  padding: 0 10px 6px 5px;
}

div.help dd {
  margin-bottom: 15px;
  padding: 8px 10px;
  background-color: rgba(255, 255, 255, .4);
  border-radius: 4px;
}

div.help dd:last-child {
  margin-bottom: 0;
}

div.help dd p {
  padding: 8px 0 0 0;
}

div.help dd p.example {
  padding: 0 0 8px 0;
  font: 12px/16px monospace;
  border-bottom: 1px solid #c8c8c8;
  box-shadow: 0 1px 0 rgba(255, 255, 255, .4);
}

/* Multi Select */
div.multi-select {
  width: 800px;
  margin-left: -400px;
}

div.multi-select.countries {
  position: absolute;
  top: 30px;
}

div.multi-select div.select {
  float: left;
  width: 100%;
  padding: 9px 15px;
  font-size: .76em;
  color: #444;
  background-color: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0,0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

div.multi-select * {
  outline: 0;
}

div.multi-select h3.ui-accordion-header a {
  clear: left;
  display: block;
  margin: 6px 30px 6px 0;
  padding: 4px 10px;
  color: #444;
  border-radius: 3px;
  background-color: #EFEFEF;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

div.multi-select h3.ui-accordion-header a:hover,
div.multi-select h3.ui-accordion-header.ui-state-active a {
  color: #222;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .2);
  background: rgb(236,236,236);
  background: -moz-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -webkit-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -o-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -ms-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: linear-gradient(top bottom, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
}

div.multi-select h3.ui-accordion-header span.counter {
  position: relative;
  float: right;
  margin: 0 0 0 0;
  padding: 5px 0;
  background-color: #EFEFEF;
  border-radius: 3px;
  width: 25px;
  text-align: center;
  font-size: .9em;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .2);
}

div.multi-select h3.ui-accordion-header span.counter:before,
div.multi-select h3.ui-accordion-header span.counter:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 4px;
  border-right-color: rgba(0, 0, 0, .2);;
}

div.multi-select h3.ui-accordion-header span.counter:after {
  margin-top: -4px;
  border-right-color: #efefef;
}

div.multi-select div.select > ul {
  clear: left;
  float: left;
  width: 100%;
  padding: 0 0 20px 0;
  margin: 0 5px;
}

div.multi-select div.select > ul:last-child {
  padding-bottom: 0;
}

div.multi-select.countries div.select > ul {
  padding: 6px 8px 10px 8px;
}

div.multi-select div.select > ul > li {
  float: left;
  width: 108px;
  margin: 0 10px;
}

div.multi-select.users div.select > ul > li,
div.multi-select.businesses div.select > ul > li {
  width: 162px;
}

div.multi-select.countries div.select > ul > li {
  width: 209px;
}

div.multi-select.countries div.select > ul > li:first-child {
  width: 59px;
  margin: 0;
}

div.multi-select div.select li.item {
  white-space: nowrap;
  overflow: hidden;
}

div.multi-select div.select input {
  margin-right: 8px;
}

div.multi-select div.select label {
  cursor: pointer;
  color: #636363;
  font-size: .9em;
  padding: 0 2px 4px 2px;
  font-weight: normal;
  text-shadow: 0 1px 0 rgba(255, 255, 255, .25);
  cursor: pointer;
}

div.multi-select div.select li.prioritized label {
  color: #505050;
  font-weight: bold;
}

/* jQuery UI Tabs */
div.ui-tabs-hide {
  display: none;
}

/* Autocomplete */
ul.ui-autocomplete {
  position: absolute;
  max-height: 200px;
  font-size: 12px;
  background-color: #f5f5f5;
  border: 1px solid #d0d0d0;
  border-radius: 3px;
  overflow: auto;
}

ul.ui-autocomplete li a {
  display: block;
  padding: 1px 10px;
  color: #333;
}

ul.ui-autocomplete li a.ui-state-hover {
  background-color: #e9e9e9;
}


/* Markdown */
div.markdown,
div.markdown h1,
div.markdown h2,
div.markdown h3,
div.markdown h4,
div.markdown h5,
div.markdown h6,
div.markdown p,
div.markdown blockquote,
div.markdown a,
div.markdown small,
div.markdown strong,
div.markdown b,
div.markdown u,
div.markdown i,
div.markdown center,
div.markdown dl,
div.markdown dt,
div.markdown dd,
div.markdown ol,
div.markdown ul,
div.markdown li,
div.markdown table,
div.markdown tbody,
div.markdown tfoot,
div.markdown thead,
div.markdown tr,
div.markdown th,
div.markdown td,
div.markdown em {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
  color: #444;
  font: normal normal normal 13px/17px Helvetica, Arial, sans-serif;
}

div.markdown {
  padding-top: 3px;
}

div.markdown h1,
div.markdown h2,
div.markdown h3,
div.markdown h4,
div.markdown h5,
div.markdown h6 {
  font-weight: bold;
  padding: 3px 0;
}

div.markdown a {
  text-decoration: underline;
}

div.markdown ol, div.markdown ul {
  font: normal normal normal 13px/17px Helvetica, Arial, sans-serif;
  list-style-type: square;
  margin: 5px 0 5px 20px;
}

div.markdown blockquote:before, div.markdown blockquote:after,
div.markdown q:before, div.markdown q:after {
  content: '';
  content: none;
}

div.markdown table {
  border-collapse: collapse;
  border-spacing: 0;
}
