/**
 * silo.css.erb
 *
 * Main silo stylesheet
 *
 * =require reset
 */
body {
  background-color: #3a3a3a;
  min-width: 700px;
}

a, form.button_to input[type=submit] {
  margin: 0;
  padding: 0;
  font-size: 1em;
  color: #d0d0d0;
  background-color: transparent;
  border: 0 none transparent;
  cursor: pointer;
}

h1 {
  text-transform: uppercase;
}

h2 {
  padding: 8px 0;
  font-size: 1.2em;
  color: #444;
}

strong {
  font-weight: bold;
}

#wrapper {
  float: left;
  width: 100%;
  padding: 0 10px 10px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Header */
#header {
  width: 100%;
  float: left;
  padding: 0 20px;
  line-height: 60px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#header h1 {
  float: left;
  margin-left: -10px;
  text-indent: -99999px;
}

#header h1 a {
  display: block;
  width: 83px;
  background: transparent url(<%= asset_data_uri 'logo.png' %>) center left no-repeat;
}

#header #user-tools {
  float: right;
  margin:  16px -20px 0 0;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

#header #user-tools li {
  float: right;
  font-size: 12px;
}

#header #user-tools li:first-child {
  border-left: 1px solid #4f4f4f;
}

#header #user-tools li a {
  display: block;
  line-height: 24px;
  padding: 0 10px;
}

#header #user-tools li input[type=submit] {
  display: block;
  padding: 4px 10px 5px 10px;
}

#header #user-tools li a:hover,
#header #user-tools li input[type=submit]:hover {
  background-color: #353535;
}

#header #user-tools li input[type=submit] {
  padding-right: 26px;
  background-position: right center;
  background-image: url(<%= asset_data_uri 'icon_logout.png' %>);
  background-repeat: no-repeat;
}

/* Navigation */
#nav {
  float: left;
  width: 100%;
  font-size: .8em;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul {
  float: left;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li {
  float: left;
  width: 20%;
  padding: 0 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li.users {
  width: 15%;
}

#nav ul li:first-child {
  padding-left: 0;
}

#nav ul li:nth-child(n+4) {
  float: right;
  padding-right: 0;
}

#nav ul li a {
  font-size: .9em;
  display: block;
  padding: 8px 20px;
  text-align: center;
  text-transform: uppercase;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#515151', endColorstr='#464646',GradientType=0 );
  border-radius: 6px 6px 0 0;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .5);
}

body.experts #nav li.experts a,
body.partners #nav li.partners a,
body.references #nav li.references a,
body.users #nav li.users a {
  color: #444;
  background: #dbdbdb;
  text-shadow: 1px 1px 0px #efefef;
}

/* Content */
#content {
  clear: both;
  padding: 10px 0;
  background-color: #dbdbdb;
  border-radius: 0 0 4px 4px;
}

/* Sidebar */
#sidebar {
  float: left;
  width: 80px;
  padding: 4px 10px 0 10px;
  font-size: .7em;
}

#sidebar ul li {
  padding: 14px 0 10px;
  border-bottom: 1px solid #c9c9c9;
  box-shadow: 0 1px 0 #e9e9e9;
}

#sidebar ul li a {
  display: block;
  padding-top: 22px;
  color: #333;
  text-align: center;
  background-color: transparent;
  background-position: center top;
  background-repeat: no-repeat;
}

body.users #sidebar ul li.index a,
body.experts #sidebar ul li.index a {
  color: #222;
  background-image: url(<%= asset_data_uri 'icon_list.png' %>);
}

body.users #sidebar ul li.new a {
  color: #222;
  background-image: url(<%= asset_data_uri 'icon_user_add.png' %>);
}

body.experts #sidebar ul li.new a {
  background-image: url(<%= asset_data_uri 'icon_expert_add.png' %>);
}

body.index #sidebar ul li.index,
body.new #sidebar li.new {
  margin: -4px -10px 0 0;
  padding-top: 18px;
  background-color: #f9f9f9;
  border: 0 none transparent;
  border-radius: 4px 0 0 4px;
  box-shadow: -1px 1px 1px rgba(0, 0, 0, .2);
}

/* Main */
#main {
  min-height: 300px;
  margin: 0 10px 0 100px;
  padding: 10px 20px;
  background-color: #f9f9f9;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

body.index #main {
  border-top-left-radius: 0;
}

#main div.header {
  float: left;
  position: relative;
  width: 100%;
  margin: 0 0 20px -10px;
  padding: 10px;
  background: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

#main div.header h2 {
  padding: 0;
  line-height: 1em;
  text-shadow: 1px 1px 0px #efefef;
  margin-bottom: 10px;
}

#main div.header h3 {
  padding: 0;
  font-size: .75em;
  color: #888;
  line-height: 1em;
  text-shadow: 1px 1px 0px #efefef;
  margin-bottom: 10px;
}

#main div.header ul.tabs {
  position: absolute;
  bottom: 0;
  font-size: .8em;
  color: #666;
}

#main div.header ul.tabs li {
  cursor: pointer;
  float: left;
  line-height: 2.2em;
  padding: 2px 15px 0 15px;
  margin-right: 3px;
  background: #f9f9f9;
  border-radius: 4px 4px 0 0;
  box-shadow: 0 -2px 1px rgba(0,0,0,.1);
}

#main div.header div.button,
#main div.header a.button,
#main div.header input.button,
#main form div.field-box.buttons input[type=submit] {
  float: left;
  cursor: pointer;
  padding: 4px 10px 4px 10px;
  margin-left: 5px;
  font-size: .75em;
  color: #d0d0d0;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .5);
  border: none;
  border-top: 1px solid rgba(255, 255, 255, .1);
  border-radius: 3px;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
}

#main div.header input.button {
  padding: 6px 10px 8px 10px;
}

#main div.header input[type=text] {
  float: left;
  width: 250px;
  height: 100%;
  padding: 7px 30px 5px 10px;
  background: #f5f5f5;
  color: #222;
  font-size: 12px;
  line-height: 15px;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .2);
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main table {
  width: 100%;
  color: #5b5b5b;
  font-size: .75em;
  border-collapse: separate;
  border-spacing: 0 8px;
}

#main table td {
  padding: 7px 10px 5px 10px;
  background-color: #efefef;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

#main table td:first-child {
  border-radius: 4px 0 0 4px;
  background: #f7f7f7;
  border-left: none;
}

#main table td:last-child {
  border-radius: 0 4px 4px 0;
  background: #f7f7f7;
}

#main table td a {
  color: #444;
}

#main table td.privileges span {
  margin-right: 10px;
  padding-right: 16px;
}

#main table td.icons a,
#main table td.icons input[type=submit] {
  display: block;
  width: 12px;
  height: 12px;
  text-indent: -99999px;
  background-position: left center;
  background-repeat: no-repeat;
}

#main table td.icons a.edit {
  background-image: url(<%= asset_data_uri 'icon_edit.png' %>);
}

#main table td.icons input[type=submit].delete {
  background-image: url(<%= asset_data_uri 'icon_delete.png' %>);
}

#main table td.icons form.pending input[type=submit].delete {
  background-image: url(<%= asset_data_uri 'loading.gif' %>);
  cursor: auto;
}

body.users #main table.users td:first-child {
  padding-left: 55px;
  background: #efefef url(<%= asset_data_uri 'icon_user.png' %>) 20px center no-repeat;
}

body.users #main table.users td.privileges span.checked {
  background: transparent url(<%= asset_data_uri 'icon_checkmark.png' %>) right center no-repeat;
}

body.users #main table td.icons {
  width: 10px;
}

body.users #main table td.icons ul li {
  margin-bottom: 8px;
}

body.users #main table td.icons ul li:last-child {
  margin-bottom: 0;
}

body.experts #main div.header #quicksearch {
  float: left;
}

body.experts #main div.header #quicksearch input[type=submit] {
  float: left;
  cursor: pointer;
  height: 28px;
  width: 29px;
  margin: 0 0 0 -29px;
  border: none;
  text-indent: -99999px;
  cursor: pointer;
  font-size: .75em;
  color: #d0d0d0;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .5);
  border: none;
  border-top: 1px solid rgba(255, 255, 255, .1);
  border-radius: 0 3px 3px 0;
  background: url(<%= asset_data_uri 'icon_search.png' %>) center center no-repeat, -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: url(<%= asset_data_uri 'icon_search.png' %>) center 7px no-repeat, -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: url(<%= asset_data_uri 'icon_search.png' %>) center center no-repeat, -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: url(<%= asset_data_uri 'icon_search.png' %>) center center no-repeat, -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: url(<%= asset_data_uri 'icon_search.png' %>) center center no-repeat, linear-gradient(to bottom,  #515151 0%,#464646 100%);
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
}

body.experts #main div.header #filter {
  display: none;
  clear: both;
  padding-top: 20px;
}

body.experts #main table.experts {
  position: relative;
  clear: both;
}

body.experts #main table.experts thead tr {
  line-height: 0;
}

body.experts #main table.experts thead th {
  cursor: pointer;
  text-align: left;
  border-spacing: 0;
  background: none;
  box-shadow: none;
  font-size: .8em;
  padding: 0 5px 0 0;
  font-weight: bold;
  color: #bbb;
  text-shadow: 1px 1px 0px rgba(255,255,255,.2);
  padding: 0 0 0 5px;
}

body.experts #main table.experts thead th:hover {
  color: #AAA;
  text-shadow: 1px 1px 0px rgba(255,255,255,.1);
}

body.experts #main table.experts thead th span {
  float: right;
}

body.experts #main table.experts td:first-child {
  width: 6px;
  padding: 0;
}

body.experts #main table.experts td:nth-child(2).male {
  border-left: 2px solid #7c99b6;
}

body.experts #main table.experts td:nth-child(2).female {
  border-left: 2px solid #b67c84;
}

body.experts #main table.experts td:first-child,
body.experts #main table.experts td:nth-child(2),
body.experts #main table.experts td:nth-child(3) {
  background: #f7f7f7;
  border-right: 1px solid #EEE;
}

body.experts #main table td.icons {
  width: 35px;
}

body.experts #main table td.icons ul {
  width: 100%;
  padding: 0;
  margin: 0;
}

body.experts #main table td.icons ul li {
  float: right;
  margin-left: 8px;
}

body.experts #main table td.icons ul li:last-child {
  margin-left: 0;
}

body.experts div.confirm-delete {
  position: absolute;
  z-index: 99999;
  background: #d02c20;
  color: #dbdbdb;
  font-size: .75em;
  text-shadow: 1px 1px 0px rgba(0,0,0,.3);
}

body.experts div.confirm-delete:after {
  content: ' ';
  position: absolute;
  top: 50%;
  left: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 3px;
  border-left-color: #d02c20;
}

body.experts div.confirm-delete div {
  cursor: pointer;
  float: left;
  position: relative;
  padding: 6px 12px 0 12px;
  height: 100%;
  border-left: 1px solid #ba1d12;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts div.confirm-delete div:hover {
  color: #ebebeb;
  background: #ba1d12;
}

/* Forms */
#main form {
  position: relative;
}

#main form div.field-box {
  width: 49%;
  padding: 0 10px;
  margin-bottom: 10px;
  background-color: #e8e8e8;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
  border-radius: 4px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main form div.field-box.left {
  float: left;
  margin-right: 10px;
}

#main form div.field-box.right {
  float: right;
}

#main form div.field-box.buttons {
  clear: both;
  width: 100%;
  padding: 0;
  margin: 0 0 10px 0;
  background-color: transparent;
  box-shadow: none;
}

#main form div.field-box.buttons input[type=submit] {
  padding: 5px 10px 7px 10px;
}

#main form p {
  margin: 10px 0;
}

#main form label {
  display: block;
  font-size: .75em;
  color: #444;
}

#main form label.check-box-label,
#main form label.select-box-label {
  display: inline;
}

#main form input[type=text],
#main form input[type=password] {
  width: 100%;
  padding: 7px 30px 5px 10px;
  background: #f5f5f5;
  color: #222;
  font-size: 12px;
  line-height: 16px;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .3);
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main form div.field-box.buttons input[type=submit] {
  float: right;
}

#main form table {
  font-size: 1em;
  border-spacing: 0;
  margin: 10px 0;
}

#main form table td,
#main form table td:first-child,
#main form table td:last-child {
  padding: 0 10px 0 0;
  background: transparent;
  box-shadow: none;
}

#main form table td:last-child {
  padding: 0;
}

#main form table td input[type=text] {

}

/* Login */
body.login {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50%;
  float: none;
}

body.login #content {
  position: relative;
  margin: -180px auto 0 auto;
  width: 250px;
  text-align: center;
  background-color: transparent;
}

body.login #content h1 {
  text-indent: -99999px;
  height: 70px;
  width: 99%;
  background: transparent url(<%= asset_data_uri 'logo.png' %>) center center no-repeat;
}

body.login #content form#login-form input {
  margin-bottom: 4px;
}

body.login #content form#login-form input[type=text],
body.login #content form#login-form input[type=password] {
  width: 100%;
  padding: 8px 10px;
  font-size: .8em;
  color: #efefef;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  background: #2b2b2b;
  box-shadow:inset 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.login #content form#login-form input[type=submit] {
  cursor: pointer;
  width: 100%;
  padding: 8px 0;
  font-size: .8em;
  color: #efefef;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .2);
  border: none;
  border-top: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Pagination */
body.experts #main div.header div.pagination {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 8px 0 0 8px;
  background: #f9f9f9;
  border-radius: 4px 0 0 0;
  box-shadow: -1px -2px 1px rgba(0,0,0,.05);
}

body.experts div.pagination.bottom {
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  height: 30px;
  margin: 10px 0 0 0;
}

ul.pagination {
   font-size: .75em;
}

body.experts div.pagination.bottom ul.pagination {
   float: right;
}

ul.pagination li {
  float: left;
  padding: 3px 4px 1px 4px;
  margin: 0;
  border-radius: 3px;
}

ul.pagination li > * {
  color: #999;
  border-radius: 2px 2px 0 0;
  padding: 4px 6px;
  background: #efefef;
  border-radius: 3px;
}

ul.pagination li.back > * {
  color: #666;
  margin-right: 10px;
  padding-left: 19px;
  background: #efefef url(<%= asset_data_uri 'icon_back.png' %>) left center no-repeat;
}

ul.pagination li.next > * {
  color: #666;
  margin-left: 10px;
  padding-right: 19px;
  background: #efefef url(<%= asset_data_uri 'icon_next.png' %>) right center no-repeat;
}

ul.pagination li span {
  color: #666;
  font-weight: bold;
  text-shadow: none;
  background: transparent;
}

ul.pagination li span.gap {
  color: #999;
  padding: 4px 2px;
  background-color: transparent;
}

/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 16px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #dbdbdb;
  background-color: #3a3a3a;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

div.flash:before,
div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-top: -8px;
  border-width: 8px;
  border-right-color: #4f4f4f;
}

div.flash:after {
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #3a3a3a;
}

div.flash.highlight {
  left: 44px;
}

body.login div.flash {
  position: absolute;
  top: auto;
  left: auto;
  bottom: -28px;
  width: 100%;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #DBDBDB;
  background-color: #3A3A3A;
  border: 2px solid #4F4F4F;
  border-radius: 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.login div.flash:before,
body.login div.flash:after {
  content: ' ';
  position: absolute;
  top: -8px;
  right: 50%;
  border: solid transparent;
  width: 0;
  height: 0;
}

body.login div.flash:before {
  margin: -8px -5px 0 0;
  border-width: 8px;
  border-bottom-color: #4F4F4F;
}

body.login div.flash:after {
  margin: -2px -2px 0 0;
  border-width: 5px;
  border-bottom-color: #3A3A3A;
}
