/**
 * silo.css.erb
 *
 * Main silo stylesheet
 *
 * =require reset
 */
body {
  background-color: #dbdbdb;
}

a, form.button_to input[type=submit] {
  margin: 0;
  padding: 0;
  font-size: 1em;
  color: #d0d0d0;
  background-color: transparent;
  border: 0 none transparent;
  cursor: pointer;
}

h1 {
  text-transform: uppercase;
}

h2 {
  padding: 8px 0;
  font-size: 1.2em;
  color: #444;
}

strong {
  font-weight: bold;
}

/* Header */
#wrapper {
  float: left;
  width: 100%;
}

#header {
  width: 100%;
  float: left;
  padding: 0 20px;
  line-height: 60px;
  background-color: #3a3a3a;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#header h1 {
  float: left;
  text-indent: -9999px;
}

#header h1 a {
  display: block;
  width: 83px;
  background: transparent url(<%= asset_data_uri 'logo.png' %>) center left no-repeat;
}

#user-tools {
  float: right;
  margin:  16px -10px 0 0;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

#user-tools li {
  float: right;
}

#user-tools li:first-child {
  border-left: 1px solid #4f4f4f;
}

#user-tools li a, #user-tools li input[type=submit] {
  display: block;
  padding: 0 10px;
  font-size: 12px;
  line-height: 24px;
}

#user-tools li input[type=submit] {
  padding-right: 26px;
  background-position: right center;
  background-image: url(<%= asset_data_uri 'icon_logout.png' %>);
  background-repeat: no-repeat;
}

/* Navigation */
#nav {
  float: left;
  width: 100%;
  font-size: .8em;
  background-color: #3a3a3a;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul {
  float: left;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li {
  float: left;
  width: 20%;
  padding: 0 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li:first-child {
  padding-left: 0;
}

#nav ul li:nth-child(n+4) {
  float: right;
  padding-right: 0;
}

#nav ul li a {
  display: block;
  padding: 6px 20px;
  text-align: center;
  text-transform: uppercase;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#515151', endColorstr='#464646',GradientType=0 );
  border-radius: 6px 6px 0 0;
}

body.experts #nav li.experts a, body.partners #nav li.partners a,
body.references #nav li.references a, body.users #nav li.users a {
  color: #444;
  background: #dbdbdb;
}

/* Content */
#content {
  clear: both;
  padding-top: 10px;
}

/* Sidebar */
#sidebar {
  float: left;
  width: 80px;
  padding: 4px 10px 0 10px;
  font-size: .7em;
}

#sidebar ul li {
  padding: 14px 0 10px;
  border-bottom: 1px solid #c9c9c9;
  box-shadow: 0 1px 0 #e9e9e9;
}

#sidebar ul li a {
  display: block;
  padding-top: 22px;
  color: #333;
  text-align: center;
  background-color: transparent;
  background-position: center top;
  background-repeat: no-repeat;
}

#sidebar ul li.index a {
  background-image: url(<%= asset_data_uri 'icon_list.png' %>);
}

body.users #sidebar ul li.new a {
  background-image: url(<%= asset_data_uri 'icon_user_add.png' %>);
}

body.index #sidebar ul li.index, body.new #sidebar li.new {
  margin: -4px -10px 0 0;
  padding-top: 18px;
  background-color: #f9f9f9;
  border: 0 none transparent;
  border-radius: 4px 0 0 4px;
  box-shadow: -1px 1px 1px rgba(0, 0, 0, .2);
}


/* Main */
#main {
  min-height: 600px;
  margin: 0 10px 0 100px;
  padding: 10px 20px;
  background-color: #f9f9f9;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

body.index #main {
  border-top-left-radius: 0;
}

#main table {
  width: 100%;
  font-size: .8em;
  border-collapse: separate;
  border-spacing: 0 10px;
}

#main table td {
  margin-bottom: 20px;
  padding: 6px 14px;
  background-color: #e8e8e8;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

#main table td:first-child {
  border-radius: 4px 0 0 4px;
}

#main table td:last-child {
  border-radius: 0 4px 4px 0;
}

#main table td a {
  color: #444;
}

#main table td.privileges span {
  margin-right: 10px;
  padding-right: 16px;
}

#main table td.privileges span.checked {
  background: transparent url(<%= asset_data_uri 'icon_checkmark.png' %>) right center no-repeat;
}

#main table td.icons a, #main table td.icons input[type=submit] {
  padding-left: 24px;
  color: #444;
  background: transparent;
  background-position: left center;
  background-repeat: no-repeat;
}

#main table td.icons a {
  background-image: url(<%= asset_data_uri 'icon_edit.png' %>);
}

#main table td.icons input[type=submit] {
  background-image: url(<%= asset_data_uri 'icon_delete.png' %>);
}

/* Forms */
#main form div.field-box {
  float: left;
  width: 49%;
  padding: 6px 10px;
  margin-bottom: 20px;
  background-color: #e8e8e8;
  border-radius: 4px;
  box-sizing: border-box;
}

#main form div.field-box.buttons {
  clear: both;
  background-color: transparent;
}

#main form div.field-box.more {
  float: right;
}

#main form p {
  margin: 10px 0;
}

#main form label {
  display: block;
  font-size: .8em;
}

#main form label.check-box-label {
  display: inline;
}

#main form input[type=text], #main form input[type=password] {
  width: 100%;
  padding: 6px 10px;
  border: 1px solid #c0c0c0;
  box-sizing: border-box;
}

/* Flash */
div.flash {
  float: left;
  position: relative;
  top: 16px;
  left: 16px;
  padding: 0 16px;
  font-size: 12px;
  line-height: 24px;
  color: #dbdbdb;
  background-color: #3a3a3a;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

div.flash:before, div.flash:after {
  content: ' ';
  position: absolute;
  top: 50%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
}

div.flash:before {
  margin-top: -8px;
  border-width: 8px;
  border-right-color: #4f4f4f;
}

div.flash:after {
  margin-top: -5px;
  border-width: 5px;
  border-right-color: #3a3a3a;
}

div.flash.highlight {
  padding: 0 32px;
}
