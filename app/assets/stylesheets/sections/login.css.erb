/**
 * login.css.erb
 *
 * Login page style definitions
 */
body.login {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50%;
  float: none;
}

body.login #content {
  position: relative;
  margin: -180px auto 0 auto;
  width: 250px;
  text-align: center;
  background-color: transparent;
}

body.login #content h1 {
  text-indent: -99999px;
  height: 70px;
  width: 99%;
  background-position: 76px center;
}

#login-form input {
  margin-bottom: 4px;
}

#login-form input[type=text],
#login-form input[type=password] {
  width: 100%;
  padding: 8px 10px;
  font-size: .8em;
  color: #efefef;
  border: none;
  border-bottom: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  background: #2b2b2b;
  box-shadow:inset 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#login-form input[type=submit] {
  cursor: pointer;
  width: 100%;
  padding: 8px 0;
  font-size: .8em;
  color: #efefef;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .2);
  border: none;
  border-top: 1px solid rgba(255, 255, 255, .1);
  border-radius: 4px;
  background: -moz-linear-gradient(top,  #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -o-linear-gradient(top,  #515151 0%,#464646 100%);
  background: -ms-linear-gradient(top,  #515151 0%,#464646 100%);
  background: linear-gradient(to bottom,  #515151 0%,#464646 100%);
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Flash */
body.login div.flash {
  position: absolute;
  top: auto;
  left: auto;
  top: 100%;
  width: 100%;
  padding: 2px 16px;
  font-size: 12px;
  line-height: 20px;
  color: #DBDBDB;
  background-color: #3A3A3A;
  border: 2px solid #4F4F4F;
  border-radius: 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.login div.flash:before,
body.login div.flash:after {
  content: ' ';
  position: absolute;
  top: -8px;
  right: 50%;
  border: solid transparent;
  width: 0;
  height: 0;
}

body.login div.flash:before {
  margin: -8px -5px 0 0;
  border-width: 8px;
  border-bottom-color: #4F4F4F;
}

body.login div.flash:after {
  margin: -2px -2px 0 0;
  border-width: 5px;
  border-bottom-color: #3A3A3A;
}
