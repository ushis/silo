/* Overlay "Open List" */
div.overlay.open-list {
  width: 600px; 
  margin-left: -300px;
}

div.overlay.open-list div.select {
  float: left;
  width: 100%;
}

div.overlay.open-list div.select > div {
  float: left;
  width: 49%;
}

div.overlay.open-list div.select > div.last {
  float: right;
  border-left: 1px solid #CCC;
}

div.overlay.open-list form input[type="text"] {
  float: left;
  width: 200px;
}

div.overlay.open-list form input[type="submit"] {
  float: left;
}

div.overlay.open-list div.select > div.last input[type="text"],
div.overlay.open-list div.select > div.last input[type="submit"] {
  float: right;
}

div.overlay.open-list table {
  position: relative;
  float: left;
  margin: 20px 0 -5px 0;
}

div.overlay.open-list table td:last-child {
  width: 10px;
  padding-right: 0;
}

div.overlay.open-list a.icon-folder-open {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

div.overlay.open-list a.icon-folder-open:before {
  color: #666;
  margin-right: 99999px;
}