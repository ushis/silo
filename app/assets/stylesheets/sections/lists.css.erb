/* Overlay "Open List" */
div.overlay.open-list {
  width: 600px; 
  margin-left: -300px;
}

div.overlay.open-list div.form-wrapper {
  float: left;
  width: 49%;
}

div.overlay.open-list div.form-wrapper.last {
  float: right;
}

div.overlay.open-list form input[type="text"] {
  float: left;
  width: 180px;
}

div.overlay.open-list form input[type="submit"] {
  float: right;
}

div.overlay.open-list table td:last-child {
  width: 10px;
  padding-right: 0;
}

div.overlay.open-list a.icon-folder-open {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

div.overlay.open-list a.icon-folder-open:before {
  color: #666;
  margin-right: 99999px;
}