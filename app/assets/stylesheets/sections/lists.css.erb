/**
 * lists.css.erb
 *
 * Defines some list styles.
 */
body.lists #content-wrapper {
  padding: 0;
}

body.lists #content {
  border-radius: 4px 0 4px 4px;
}

body.lists.show #main {
  padding-right: 10px;
  background-color: #f5f5f5;
  box-shadow: 0 1px 2px rgba(0,0,0,.33);
  min-height: 400px;
}

body.lists.show.experts-list #main div.tabbed-content ul.tabs li.experts-list,
body.lists.show.partners-list #main div.tabbed-content ul.tabs li.partners-list {
  background: #FFF;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .33);
}

body.lists.show.experts-list #main div.tabbed-content ul.tabs li.experts-list a,
body.lists.show.partners-list #main div.tabbed-content ul.tabs li.partners-list a {
  color: #555;
}

/* Filter */
body.lists #filter form label {
  float: left;
  margin: 6px 10px 0;
}

body.lists #filter input[type=submit] {
  float: left;
}

/* Tables */
body.lists #main table.lists td:first-child {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

body.lists #main table.lists td:nth-child(2) {
  background-color: #f7f7f7;
}

body.lists #main table.lists td.open {
  width: 10px;
  padding-right: 0;
}

body.lists #main table td.remove {
  width: 10px;
}

body.lists #main table.lists td.open a,
body.lists #main table td.remove a {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

body.lists #main table.lists td.open a.active,
body.lists #main div.header ul.tools li.open a.active  {
  color: #999;
  cursor: default;
}

body.lists #main table td.note {
  min-width: 200px;
  max-width: 450px;
}

body.lists #main table td.note a.editable {
  position: relative;
  color: #8d8d8d;
  text-shadow: 0 1px 0 #FFF;
  line-height: 15px;
  padding: 9px 24px 9px 10px;
  margin: -6px -10px -5px -10px;
}

body.lists #main table td.note a.editable:hover {
  color: #666;
}

body.lists #main table td.note a.editable:hover:after {
  position: absolute;
  top: 8px;
  right: 10px;
  font-family: FontAwesome;
  content: '\f040';
  font-size: 1.2em;
  font-style: normal;
  color: #555;
}

body.lists #main table td.removefromlist {
  width: 18px;
}

body.lists #main table td.removefromlist a {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  width: 18px;
}

body.lists #main table td.removefromlist a:before {
  margin-right: 99999px;
}

/* List form overlay */
div.overlay.list-form {
  top: 50%;
  width: 400px;
  margin: -220px 0 0 -180px;
}

div.overlay.list-form div.form-wrapper {
  margin: 0;
}

div.overlay.list-form form textarea {
  height: 100px;
}

div.overlay.list-form form div.message {
  padding-bottom: 10px;
  font-size: .76em;
  color: rgb(68, 68, 68);
}

/* Overlay "Choose List" */
div.overlay.choose-list {
  width: 600px;
  margin-left: -300px;
}

div.overlay.choose-list table {
  position: relative;
  float: left;
  margin: 10px 0 -5px 0;
}

div.overlay.choose-list table td:first-child {
  width: 8px;
}

div.overlay.choose-list table td:nth-child(2) {
  background-color: #f7f7f7;
}

div.overlay.choose-list table td:last-child {
  width: 10px;
  padding-right: 0;
}

div.overlay.choose-list table td:last-child a {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

div.overlay.choose-list table td:last-child a:before {
  color: #666;
  margin-right: 99999px;
}