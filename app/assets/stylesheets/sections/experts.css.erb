/**
 * experts.css.erb
 *
 * Experts section style definitions
 */
/* Content */
body.experts #content {
  border-radius: 0 4px 4px 4px;
}

/* Main */
body.experts.new #main,
body.experts.edit #main {
  width: 740px;
}

body.experts.edit #main {
  padding: 12px 20px 18px 20px;
}

body.experts.show #main div.sidebar.details,
body.experts.documents #main div.sidebar.details {
  width: 280px;
  padding: 0;
}

body.experts.show #main div.tabbed-content div.content div.right,
body.experts.documents #main div.tabbed-content div.content div.right {
  padding-right: 0;
}

body.experts.documents #main div.tabbed-content div.content div.left {
  padding-right: 5px;
}

body.experts.show #main div.tabbed-content,
body.experts.documents #main div.tabbed-content {
  padding-left: 300px;
}

body.experts.show #main div.tabbed-content div.content ul.info {
  margin-top: -15px;
}

body.experts.show #main div.tabbed-content div.content ul.info li.birthday,
body.experts.show #main div.tabbed-content div.content ul.info li.gender {
  width: 50%;
}

body.experts.show #main div.tabbed-content div.content ul.info li.citizenship,
body.experts.show #main div.tabbed-content div.content ul.info li.job,
body.experts.show #main div.tabbed-content div.content ul.info li.comment,
body.experts.show #main div.tabbed-content div.content ul.info li.languages,
body.experts.show #main div.tabbed-content div.content ul.info li.comments {
  width: 100%;
}

body.experts.show #main div.tabbed-content ul.tabs li.details,
body.experts.documents #main div.tabbed-content ul.tabs li.documents {
  background: #FFF;
  color: #555;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .33);
}

/* Header */
body.experts.index #main input[type="submit"] {
  float: right;
}

/* Index Table */
body.experts #main table.experts td:first-child {
  width: 6px;
  padding: 0;
}

body.experts #main table.experts td:first-child,
body.experts #main table.experts td:nth-child(2),
body.experts #main table.experts td:nth-child(3) {
  background: #f9f9f9;
}

/* Pagination */
body.experts #main div.header div.pagination {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 8px 0 0 8px;
  background: #f9f9f9;
  border-radius: 4px 0 0 0;
  box-shadow: -1px -2px 1px rgba(0,0,0,.05);
}

body.experts div.pagination.bottom {
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  height: 30px;
  margin: 10px 0 0 0;
}

body.experts div.pagination.bottom ul.pagination {
   float: right;
}

/* Form */
body.experts #main div.form-wrapper div.birthday {
  margin-right: 20px;
}

body.experts #main div.form-wrapper div.degree input,
body.experts #main div.form-wrapper div.name input,
body.experts #main div.form-wrapper div.business input[type=text],
body.experts #main div.form-wrapper div.citizenship select {
  width: 350px;
}

body.experts #main div.form-wrapper div.languages input {
  width: 720px;
}

body.experts #main div.form-wrapper div:last-child {
  margin-right: 0;
}

body.experts #main div.form-wrapper div.fee {
  clear: left;
  margin-top: 14px;
}

body.experts #main div.form-wrapper div.former-collaboration {
  margin: 10px 0 0 20px;
}

body.experts #main div.form-wrapper div.former-collaboration input + label {
  display: inline;
}

body.experts #main div.comment textarea {
  width: 720px;
  height: 150px;
}

body.experts #main div.form-wrapper form div.submit {
  width: 100%;
}

body.experts #main div.form-wrapper form input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}

/* Details & Documents */
body.experts.show #main div.info div.row div.citizenship,
body.experts.show #main div.info div.row div.fee,
body.experts.show #main div.info div.row div.firstname,
body.experts.show #main div.info div.row div.name {
  width: 45%;
  margin-right: 10px;
}

body.experts.show #main div.info div.row div.citizenship,
body.experts.show #main div.info div.row div.fee,
body.experts.show #main div.info div.row div.firstname,
body.experts.show #main div.info div.row div.birthday {
  width: 45%;
  margin-right: 10px;
  border-right: 1px solid #e5e5e5;
}

body.experts.show #main div.info div.row div.birthday,
body.experts.show #main div.info div.row div.gender,
body.experts.show #main div.info div.row div.former-collaboration {
  width: 25%;
}

body.experts.documents #main h4 {
  margin-top: 3px;
}

body.experts.documents #main div.cvs table td.icon-file,
body.experts.documents #main div.attachments table td.icon-attachment {
  padding-left: 30px;
  position: relative;
}

body.experts.documents #main div.cvs table td.icon-file:before,
body.experts.documents #main div.cvs table td.icon-file:after {
  position: absolute;
  top: 4px;
  left: 10px;
  font-size: 1.25em;
}

body.experts.documents #main div.cvs table td.icon-file:before {
  color: #FFF;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts.documents #main div.cvs table td.icon-file:after {
  color: #666;
  top: 3px;
}

body.experts.documents #main div.attachments table td.icon-attachment:before,
body.experts.documents #main div.attachments table td.icon-attachment:after {
  position: absolute;
  top: 4px;
  left: 10px;
  font-size: 1.25em;
}

body.experts.documents #main div.attachments table td.icon-attachment:before {
  color: #FFF;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts.documents #main div.attachments table td.icon-attachment:after {
  color: #5c5c5c;
}

body.experts.documents #main div table input.icon-delete {
  display: block;
  width: 11px;
  height: 12px;
  padding: 0;
  text-indent: -99999px;
  box-shadow: none;
}
