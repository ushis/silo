/**
 * experts.css.erb
 *
 * Experts section style definitions
 */
/* Main */
body.experts.new #main,
body.experts.edit #main {
  width: 740px;
}

body.experts.edit #main {
  padding: 12px 20px 18px 20px;
}

body.experts #main div.header {
  overflow: hidden;
}

body.experts.index #main div.header h2 {
  padding-left: 24px;
  background-position: left 1px;
}

/* Filter */
body.experts #filter div.row {
  clear: left;
  float: left;
  width: 600px;
  padding: 10px 0;
}

body.experts #filter div.row.name {
  padding-top: 0;
  border-bottom: 1px solid #bbb;
  box-shadow: 0 1px 0 #efefef;
}

body.experts #filter div.row.q {
  padding-bottom: 0;
}

body.experts #filter input[type=text] {
  width: 193px;
  margin-right: 10px;
}

body.experts #filter div.citizenship input[type=text] {
  margin-right: 0;
}

body.experts #filter #q {
  width: 396px;
}

body.experts #filter input[type=submit] {
  float: right;
}

body.experts #filter div.need-help {
  float: left;
  position: relative;
  cursor: pointer;
  padding: 2px 7px 1px 7px;
  margin: 3px 0 0 -3px;
  font-size: .7em;
  font-weight: bold;
  color: #777;
  border: none;
  background: #dbdbdb;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, .4);
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .3), 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts #filter div.need-help:hover {
  color: #444;
}

body.experts #filter div.need-help:before {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -3px;
  border-width: 4px;
  border-right-color: rgba(0, 0, 0, .5);
}

body.experts #filter div.need-help:after {
  content: ' ';
  position: absolute;
  top: 48%;
  right: 100%;
  border: solid transparent;
  width: 0;
  height: 0;
  margin-top: -4px;
  border-width: 4px;
  border-right-color: #dbdbdb;
}

/* Tabs */
body.experts #main div.header {
  margin-bottom: 20px;
}

body.experts #main div.header ul.tabs {
  position: absolute;
  bottom: 0;
  font-size: .8em;
  color: #666;
}

body.experts #main div.header ul.tabs li {
  cursor: pointer;
  text-align: center;
  float: left;
  line-height: 2.2em;
  padding: 0;
  margin-right: 3px;
  background: -moz-linear-gradient(top, #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top, #515151 0%, #464646 100%);
  background: -o-linear-gradient(top, #515151 0%, #464646 100%);
  background: -ms-linear-gradient(top, #515151 0%, #464646 100%);
  background: linear-gradient(to bottom, #515151 0%, #464646 100%);
  color: #d0d0d0;
  border-radius: 4px 4px 0 0;
  text-shadow: 1px 1px 0px rgba(0,0,0,.5);
}

body.experts #main div.header ul.tabs li a {
  display: block;
  padding: 0px 15px;
}

body.experts #main div.header.details {
  min-height: 66px;
}

body.experts.show #main div.header ul.tabs li.show,
body.experts.contact #main div.header ul.tabs li.contact,
body.experts.documents #main div.header ul.tabs li.documents {
  background: #f9f9f9;
}

body.experts.show #main div.header ul.tabs li.show a,
body.experts.contact #main div.header ul.tabs li.contact a,
body.experts.documents #main div.header ul.tabs li.documents a {
  color: #3b3b3b;
  text-shadow: none;
}

/* Tables */
body.experts #main table td:last-child {
  border-radius: 0 4px 4px 0;
}

body.experts #main table td.cvs a {
  border-radius: 2px;
  padding: 6px 0 3px 16px;
  margin-right: 8px;
  display: inline;
  text-transform: uppercase;
  color: #444;
  font-size: .9em;
  text-shadow: 1px 1px 0px #f5f5f5;
}

body.experts #main table th.attachments {
  width: 14px;
}

body.experts #main table td.attachments a {
  display: block;
  width: 13px;
  text-indent: -9999px;
}

body.experts #main table td a {
  display: block;
}

/* Index Table */
body.experts #main table.experts {
  position: relative;
}

body.experts #main table.experts thead tr {
  line-height: 0;
}

body.experts #main table.experts thead th {
  text-align: left;
  border-spacing: 0;
  background: none;
  box-shadow: none;
  font-size: .8em;
  padding: 0 5px 0 0;
  color: #bbb;
  text-shadow: 1px 1px 0px rgba(255,255,255,.2);
  padding: 0 0 0 5px;
}

body.experts #main table.experts thead th span {
  float: right;
}

body.experts #main table.experts td:first-child {
  width: 6px;
  padding: 0;
}

body.experts #main table.experts td:nth-child(2).male {
  border-left: 2px solid #7c99b6;
}

body.experts #main table.experts td:nth-child(2).female {
  border-left: 2px solid #b67c84;
}

body.experts #main table.experts td:first-child,
body.experts #main table.experts td:nth-child(2),
body.experts #main table.experts td:nth-child(3) {
  background: #f7f7f7;
  border-right: 1px solid #EEE;
}

/* Pagination */
body.experts #main div.header div.pagination {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 8px 0 0 8px;
  background: #f9f9f9;
  border-radius: 4px 0 0 0;
  box-shadow: -1px -2px 1px rgba(0,0,0,.05);
}

body.experts div.pagination.bottom {
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  height: 30px;
  margin: 10px 0 0 0;
}

body.experts div.pagination.bottom ul.pagination {
   float: right;
}

/* Form */
body.experts #main div.form-wrapper div.degree input {
  width: 120px;
}

body.experts #main div.form-wrapper div.name input,
body.experts #main div.form-wrapper div.business input[type=text],
body.experts #main div.form-wrapper div.citizenship select {
  width: 350px;
}

body.experts #main div.form-wrapper div:last-child {
  margin-right: 0;
}

body.experts #main div.form-wrapper div.fee {
  clear: left;
  margin-top: 14px;
}

body.experts #main div.form-wrapper div.former-collaboration {
  margin-top: 10px;
}

body.experts #main div.form-wrapper div.former-collaboration input + label {
  display: inline;
}

body.experts #main div.comment textarea {
  width: 720px;
  height: 150px;
}

body.experts #main div.form-wrapper form div.submit {
  width: 100%;
}

body.experts #main div.form-wrapper form input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}

/* Details & Documents */
body.experts.show #main div.personal {
  float: left;
  position: relative;
  width: 60%;
  padding: 10px;
  border-radius: 4px;
  background-color: #f7f7f7;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.show #main div.personal div.tools {
  position: absolute;
  top: 0;
  right: 0;
  width: 28px;
  height: 100%;
  border-radius: 0 4px 4px 0;
  background-color: #efefef;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.show #main div.personal div.row {
  float: left;
  width: 100%;
  padding: 7px 0;
  border-bottom: 1px solid #e5e5e5;
  box-shadow: 0 1px 1px rgba(255, 255, 255, 1);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.show #main div.personal div.row:first-child {
  padding-top: 0;
}

body.experts.show #main div.personal div.row.last {
  border-bottom: none;
  box-shadow: none;
}

body.experts.show #main div.personal div.row div {
  float: left;
  width: 100%;
}

body.experts.show #main div.personal div.row div.citizenship,
body.experts.show #main div.personal div.row div.fee,
body.experts.show #main div.personal div.row div.firstname,
body.experts.show #main div.personal div.row div.name {
  width: 45%;
  margin-right: 10px;
}

body.experts.show #main div.personal div.row div.citizenship,
body.experts.show #main div.personal div.row div.fee,
body.experts.show #main div.personal div.row div.firstname,
body.experts.show #main div.personal div.row div.birthday {
  width: 45%;
  margin-right: 10px;
  border-right: 1px solid #e5e5e5;
}

body.experts.show #main div.personal div.row div.birthday,
body.experts.show #main div.personal div.row div.gender,
body.experts.show #main div.personal div.row div.former-collaboration {
  width: 25%;
}

body.experts.show #main div.personal div.row h4 {
  color: #666;
  font-size: .7em;
  text-shadow: 1px 1px 0 rgba(255, 255, 255, .5);
}

body.experts.show #main div.personal div.row p {
  color: #444;
  font-size: .8em;
}

body.experts.show #main div.personal div.row div.empty p:last-child:after {
  content: '-';
}

body.experts.show #main div.personal div.tools a.icon-edit {
  display: block;
  margin: 7px auto;
  width: 12px;
  height: 12px;
  text-indent: -99999px;
}

body.experts.show #main div.communication {
  float: right;
  position: relative;
  width: 38%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.show #main div.communication div.addresses {
  margin-top: -8px;
}

body.experts.show #main div.communication div.contacts h4,
body.experts.show #main div.communication div.addresses h4 {
  padding: 1px 0 0 20px;
  font-size: .9em;
}

body.experts.show #main div.communication div table td.del {
  width: 20px;
  padding: 0 5px 0 4px;
  vertical-align: middle;
}

body.experts.show #main div.communication div table td.del input[type=submit] {
  width: 12px;
  height: 12px;
  padding: 0;
  box-shadow: none;
  text-indent: -99999px;
  display: block;
}

div.communication div.forms {
  margin-top: 10px;
}

div.communication div.forms div.tab {
  float: left;
  width: 100%;
  background: #efefef;
  padding: 10px;
  border-radius: 0 4px 4px 4px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

body.experts #main div.communication div.forms div.tab div.form-wrapper {
  margin: 0;
  padding: 0;
}

body.experts #main div.communication div.forms div.tab div.form-wrapper div textarea,
body.experts #main div.communication div.forms div.tab div.form-wrapper div input[type=text] {
  margin-bottom: 10px;
}

body.experts #main div.communication div.forms div.tab div.form-wrapper div select {
  margin: 0;
  width: 150px;
}

div.communication div.forms ul.tabs {
  float: left;
  width: 100%;
}

div.communication div.forms ul.tabs li {
  float: left;
  cursor: pointer;
  background: #d5d5d5;
  margin-right: 3px;
  border-radius: 3px 3px 0 0;
}

div.communication div.forms ul.tabs li a {
  font-size: .75em;
  color: #777777;
  text-shadow: 1px 1px 0 rgba(255,255,255,.5);
  padding: 5px 10px;
}

div.communication div.forms ul.tabs li.ui-state-active {
  background: #efefef;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
  color: #525252;
}

body.experts.documents #main h4 {
  color: #555;
  font-size: .9em;
}

body.experts.documents #main div.cvs table td.icon-cv,
body.experts.documents #main div.attachments table td.icon-attachment {
  padding-left: 30px;
}

body.experts.documents #main div.cvs table td.icon-cv {
  background-position: 10px 8px;
}

body.experts.documents #main div.attachments table td.icon-attachment {
  background-position: 10px 9px;
}

body.experts.documents #main div table td.del {
  width: 24px;
  vertical-align: middle;
}

body.experts.documents #main div table input.icon-delete {
  display: block;
  width: 11px;
  height: 12px;
  padding: 0;
  text-indent: -9999px;
  box-shadow: none;
}

body.experts.documents #main div.forms {
  clear: both;
  padding-top: 20px;
}

body.experts.documents #main div.forms form {
  margin-top: 10px;
  padding: 4px 10px;
  background: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.documents #main div.forms div {
  padding: 6px 0;
}

body.experts.documents #main div.forms form input,
body.experts.documents #main div.forms form select {
  display: inline;
  float: none;
  margin: 0;
  color: #222;
}

body.experts.documents #main div.forms form input[type=text] {
  width: 190px;
}

body.experts.documents #main div.forms form input[type=file] {
  font-size: .76em;
}

body.experts.documents #main div.forms form input[type=submit] {
  float: right;
}

body.experts.documents #main div.cvs,
body.experts.documents #main div.attachments,
body.experts.documents #main div.forms > div {
  width: 49%;
  float: left;
}

body.experts.documents #main div.attachments,
body.experts.documents #main div.forms div.attachment {
  float: right;
}
