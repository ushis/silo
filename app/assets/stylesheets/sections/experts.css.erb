/**
 * experts.css.erb
 *
 * Experts section style definitions
 */
/* Content */
body.experts #content {
  border-radius: 0 4px 4px 4px;
}

/* Main */
body.experts.new #main,
body.experts.edit #main {
  width: 740px;
}

body.experts.edit #main {
  padding: 12px 20px 18px 20px;
}

/* Header */
body.experts.index #main input[type="submit"] {
  float: right;
}

/* Tables */
body.experts #main table td.cvs a {
  border-radius: 2px;
  padding: 0;
  margin-right: 8px;
  display: inline;
  text-transform: uppercase;
  color: #444;
  font-size: .9em;
}

body.experts #main table td.cvs a {
  position: relative;
  padding-left: 15px;
}

body.experts #main table td.cvs a[class^="icon-"]:before, 
body.experts #main table td.cvs a[class*=" icon-"]:before,
body.experts #main table td.cvs a[class^="icon-"]:after, 
body.experts #main table td.cvs a[class*=" icon-"]:after {
  position: absolute;
  left: 0;
  top: -2px;
  font-size: 1.45em;
  line-height: 1em;
}

body.experts #main table td.cvs a[class^="icon-"]:before, 
body.experts #main table td.cvs a[class*=" icon-"]:before {
  color: #fff;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts #main table td.cvs a[class^="icon-"]:after, 
body.experts #main table td.cvs a[class*=" icon-"]:after {
  color: #777;
  top: -3px;
}

body.experts #main table th.attachments {
  width: 14px;
}

/* Index Table */
body.experts #main table.experts td:first-child {
  width: 6px;
  padding: 0;
}

body.experts #main table.experts td:nth-child(2).male {
  border-left: 2px solid #7c99b6;
}

body.experts #main table.experts td:nth-child(2).female {
  border-left: 2px solid #b67c84;
}

body.experts #main table.experts td:first-child,
body.experts #main table.experts td:nth-child(2),
body.experts #main table.experts td:nth-child(3) {
  background: #f7f7f7;
  border-right: 1px solid #EEE;
}

/* Pagination */
body.experts #main div.header div.pagination {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 8px 0 0 8px;
  background: #f9f9f9;
  border-radius: 4px 0 0 0;
  box-shadow: -1px -2px 1px rgba(0,0,0,.05);
}

body.experts div.pagination.bottom {
  background: transparent;
  border-radius: 0;
  box-shadow: none;
  height: 30px;
  margin: 10px 0 0 0;
}

body.experts div.pagination.bottom ul.pagination {
   float: right;
}

/* Form */
body.experts #main div.form-wrapper div.birthday {
  margin-right: 20px;
}

body.experts #main div.form-wrapper div.degree input {
  width: 120px;
}

body.experts #main div.form-wrapper div.name input,
body.experts #main div.form-wrapper div.business input[type=text],
body.experts #main div.form-wrapper div.citizenship select {
  width: 350px;
}

body.experts #main div.form-wrapper div.languages input {
  width: 720px;
}

body.experts #main div.form-wrapper div:last-child {
  margin-right: 0;
}

body.experts #main div.form-wrapper div.fee {
  clear: left;
  margin-top: 14px;
}

body.experts #main div.form-wrapper div.former-collaboration {
  margin: 10px 0 0 20px;
}

body.experts #main div.form-wrapper div.former-collaboration input + label {
  display: inline;
}

body.experts #main div.comment textarea {
  width: 720px;
  height: 150px;
}

body.experts #main div.form-wrapper form div.submit {
  width: 100%;
}

body.experts #main div.form-wrapper form input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}

/* Details & Documents */
body.experts.show #main div.info div.row div.citizenship,
body.experts.show #main div.info div.row div.fee,
body.experts.show #main div.info div.row div.firstname,
body.experts.show #main div.info div.row div.name {
  width: 45%;
  margin-right: 10px;
}

body.experts.show #main div.info div.row div.citizenship,
body.experts.show #main div.info div.row div.fee,
body.experts.show #main div.info div.row div.firstname,
body.experts.show #main div.info div.row div.birthday {
  width: 45%;
  margin-right: 10px;
  border-right: 1px solid #e5e5e5;
}

body.experts.show #main div.info div.row div.birthday,
body.experts.show #main div.info div.row div.gender,
body.experts.show #main div.info div.row div.former-collaboration {
  width: 25%;
}

body.experts.documents #main h4 {
  font-size: .7em;
  padding: 0 5px 0 0;
  color: #BBB;
  text-shadow: 0 1px 0px rgba(255, 255, 255, .2);
}

body.experts.documents #main div.cvs table td.icon-file,
body.experts.documents #main div.attachments table td.icon-attachment {
  padding-left: 30px;
  position: relative;
}

body.experts.documents #main div.cvs table td.icon-file:before,
body.experts.documents #main div.cvs table td.icon-file:after {
  position: absolute;
  top: 4px;
  left: 10px;
  font-size: 1.25em;
}

body.experts.documents #main div.cvs table td.icon-file:before {
  color: #FFF;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts.documents #main div.cvs table td.icon-file:after {
  color: #666;
  top: 3px;
}

body.experts.documents #main div.attachments table td.icon-attachment:before,
body.experts.documents #main div.attachments table td.icon-attachment:after {
  position: absolute;
  top: 4px;
  left: 10px;
  font-size: 1.25em;
}

body.experts.documents #main div.attachments table td.icon-attachment:before {
  color: #FFF;
  text-shadow: 0 1px 1px rgba(0, 0, 0, .4);
}

body.experts.documents #main div.attachments table td.icon-attachment:after {
  color: #5c5c5c;
}

body.experts.documents #main div table input.icon-delete {
  display: block;
  width: 11px;
  height: 12px;
  padding: 0;
  text-indent: -99999px;
  box-shadow: none;
}

body.experts.documents #main div.forms {
  clear: both;
}

body.experts.documents #main div.forms form {
  margin-top: 10px;
  padding: 10px;
  background: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body.experts.documents #main div.forms div > div {
  padding: 6px 0;
}

body.experts.documents #main div.forms div div.input {
  height: 30px;
  margin-bottom: 5px;
}

body.experts.documents #main div.forms form input,
body.experts.documents #main div.forms form select {
  display: inline;
  float: none;
  margin: 0;
  color: #222;
}

body.experts.documents #main div.forms form select {
  margin-top: 6px;
}

body.experts.documents #main div.forms form input[type=text] {
  width: 220px;
}

body.experts.documents #main div.forms form input[type=file] {
  font-size: .76em;
}

body.experts.documents #main div.forms form input[type=submit] {
  float: right;
}

body.experts.documents #main div.cvs,
body.experts.documents #main div.attachments,
body.experts.documents #main div.forms > div {
  width: 49%;
  float: left;
}

body.experts.documents #main div.attachments,
body.experts.documents #main div.forms div.attachment {
  float: right;
}
