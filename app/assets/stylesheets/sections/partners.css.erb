/**
 * partners.css.erb
 *
 * Partners section style definitions
 */
/* Main */
body.partners.new #main,
body.partners.edit #main {
  width: 740px;
}

body.partners.show #main div.tabbed-content div.content ul.info li {
  width: 100%;
}

body.partners #main div.sidebar.details h3.updated_at {
  margin-top: -15px;
  margin-bottom: 20px;
}

body.partners.show #main div.tabbed-content ul.tabs li.show, 
body.employees #main div.tabbed-content ul.tabs li.employees,
body.partners.documents #main div.tabbed-content ul.tabs li.documents {
  background: white;
  color: #555;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .33);
}

/* Form */
body.partners.index #main input[type="submit"] {
  float: right;
}

body.partners.edit #main div.form-wrapper input[type=text],
body.partners.edit #main div.form-wrapper select,
body.partners.new #main div.form-wrapper input[type=text],
body.partners.new #main div.form-wrapper select {
  width: 350px;
}

body.partners #main div.form-wrapper div.company input[type=text],
body.partners #main div.form-wrapper div.businesses input[type=text],
body.partners #main div.form-wrapper div.advisers input[type=text],
body.partners #main div.form-wrapper div.contact-persons input[type=text] {
  width: 720px;
}

body.partners #main div.form-wrapper div.row div:nth-child(n+3) {
  margin-top: 14px;
}

body.partners #main div.form-wrapper div.comment textarea {
  width: 720px;
  height: 150px;
}

body.partners #main div.form-wrapper div.submit {
  width: 100%;
}

body.partners #main div.form-wrapper input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}

/* Documents */
body.partners.documents #main div.attachments {
  width: 100%;
}

body.partners.documents #main div.attachments h4  {
  margin: 5px 0 -5px 8px;
}

body.partners.documents #main div.attachments table tr.empty td {
  background: transparent;
  border: 0 none transparent;
  box-shadow: 0 0 0 0 transparent;
  padding: 0 0 0 3px;
}

