/**
 * partners.css.erb
 *
 * Partners section style definitions
 */
/* Main */
body.partners.new #main,
body.partners.edit #main {
  width: 740px;
}

body.partners #content {
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
}

/* Form */
body.partners.index #main input[type="submit"] {
  float: right;
}

body.partners #main div.form-wrapper input[type=text],
body.partners #main div.form-wrapper select {
  width: 350px;
}

body.partners #main div.form-wrapper div.row div:nth-child(2n) {
  margin-right: 0;
}

body.partners #main div.form-wrapper div.row div:nth-child(n+3) {
  margin-top: 14px;
}

body.partners #main div.form-wrapper div.businesses input,
body.partners #main div.form-wrapper div.contact-persons input {
  width: 720px;
}

body.partners #main div.form-wrapper div.comment textarea {
  width: 720px;
  height: 150px;
}

body.partners #main div.form-wrapper div.submit {
  width: 100%;
}

body.partners #main div.form-wrapper input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}
