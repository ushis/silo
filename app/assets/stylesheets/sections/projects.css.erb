/**
 * projects.css.erb
 *
 * Projects section style definitions
 */
/* Main */
body.projects.new #main,
body.projects.edit #main {
  width: 740px;
}

/* Edit / New Form */

body.projects.edit select#lang,
body.projects.new select#lang {
  position: absolute;
  top: 18px;
  right: 12px;
}

body.projects.edit #main div.form-wrapper div.left,
body.projects.edit #main div.form-wrapper div.right {
  float: left;
  width: 350px;
}

body.projects.edit #main div.form-wrapper input[type=text],
body.projects.edit #main div.form-wrapper select,
body.projects.new #main div.form-wrapper input[type=text],
body.projects.new #main div.form-wrapper select {
  width: 350px;
}

body.projects.edit #main div.form-wrapper textarea {
  width: 720px;
  height: 150px;
}

body.projects.edit #main div.form-wrapper div.region {
  margin: 10px 0 0 0;
}

body.projects.edit #main div.form-wrapper div.address textarea {
  height: 82px;
  width: 350px;
}

body.projects.edit #main div.form-wrapper div.title input {
  width: 720px;
}

body.projects.edit #main div.form-wrapper div.end {
  margin-right: 20px;
}

body.projects.edit #main div.form-wrapper div.start input,
body.projects.edit #main div.form-wrapper div.end input,
body.projects.edit #main div.form-wrapper div.carried_proportion input {
  width: 103px;
}

body.projects.edit #main div.form-wrapper div.status {
  float: right;
  margin: 0;
}

body.projects.edit #main div.form-wrapper div.status select {
  width: 140px;
}

body.projects.edit #main div.form-wrapper div.submit {
  padding-top: 20px;
}