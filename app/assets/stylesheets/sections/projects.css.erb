/**
 * projects.css.erb
 *
 * Projects section style definitions
 */
/* Main */
body.projects.new #main,
body.projects.edit #main {
  width: 740px;
}

/* Index */

body.projects.index table.projects td.languages a {
  float: left;
  padding: 2px 6px;
  margin: 0 4px -4px 0;
  font-size: 10px;
  line-height: 13px;
  text-transform: uppercase;
  background: #fff;
  border-radius: 1px;
  -moz-border-radius: 1px;
  -webkit-border-radius: 1px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
}

body.projects.index #filter div.row.title {
  border-bottom: 1px solid #D5D5D5;
  box-shadow: 0 1px 0 whiteSmoke;
  padding-top: 0;
}

body.projects.index #filter div.row:last-child {
  padding-bottom: 0;
}

body.projects.index #filter div.title input {
  width: 240px;
}

body.projects.index #filter div.funder input {
  width: 240px;
}

body.projects.index #filter div.status {
  float: right;
}

body.projects.index #filter div.status select {
  width: 90px;
}

body.projects.index #filter div.period-start input {
  width: 115px;
}

body.projects.index #filter div.period-end input {
  width: 115px;
}

body.projects.index #filter div.q {
  width: 349px;
}

body.projects.index #filter div.q input[type=text] {
  width: 240px;
}

body.projects.index #filter div.q input[type=submit] {
  float: right;
}

/* Show */

body.projects.show #main div.tabbed-content ul.tabs li.show, 
body.project-members #main div.tabbed-content ul.tabs li.experts, 
body.project-partners #main div.tabbed-content ul.tabs li.partners,
body.projects.documents #main div.tabbed-content ul.tabs li.documents {
  background: #FFF;
  color: #555;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.33);
}

/* Edit / New Form */

body.projects.edit select#lang,
body.projects.new select#lang {
  position: absolute;
  top: 18px;
  right: 12px;
}

body.projects.edit #main div.form-wrapper div.left,
body.projects.edit #main div.form-wrapper div.right {
  float: left;
  width: 350px;
}

body.projects.edit #main div.form-wrapper input[type=text],
body.projects.edit #main div.form-wrapper select,
body.projects.new #main div.form-wrapper input[type=text],
body.projects.new #main div.form-wrapper select {
  width: 350px;
}

body.projects.edit #main div.form-wrapper textarea {
  width: 720px;
  height: 150px;
}

body.projects.edit #main div.form-wrapper div.region {
  margin: 10px 0 0 0;
}

body.projects.edit #main div.form-wrapper div.address textarea {
  height: 82px;
  width: 350px;
}

body.projects.edit #main div.form-wrapper div.title input {
  width: 720px;
}

body.projects.edit #main div.form-wrapper div.end {
  margin-right: 20px;
}

body.projects.edit #main div.form-wrapper div.start input,
body.projects.edit #main div.form-wrapper div.end input,
body.projects.edit #main div.form-wrapper div.carried_proportion input {
  width: 103px;
}

body.projects.edit #main div.form-wrapper div.status {
  float: right;
  margin: 0;
}

body.projects.edit #main div.form-wrapper div.status select {
  width: 140px;
}

body.projects.edit #main div.form-wrapper div.submit {
  padding-top: 20px;
}