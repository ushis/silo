/**
 * projects.css.erb
 *
 * Projects section style definitions
 */
/* Main */
body.projects.new #main,
body.projects.edit #main {
  width: 740px;
}

/* Index */

body.projects.index table.projects td.languages a {
  float: left;
  padding: 2px 6px;
  margin: 0 4px -4px 0;
  font-size: 10px;
  line-height: 13px;
  text-transform: uppercase;
  background: #fff;
  border-radius: 1px;
  -moz-border-radius: 1px;
  -webkit-border-radius: 1px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
}

body.projects.index #filter div.row.title {
  border-bottom: 1px solid #D5D5D5;
  box-shadow: 0 1px 0 whiteSmoke;
  padding-top: 0;
}

body.projects.index #filter div.row:last-child {
  padding-bottom: 0;
}

body.projects.index #filter div.title input {
  width: 302px;
}

body.projects.index #filter div.funders input {
  width: 302px;
}

body.projects.index #filter div.status {
  float: right;
  margin-right: 0 !important;
}

body.projects.index #filter div.status select {
  width: 95px;
}

body.projects.index #filter div.period-start select,
body.projects.index #filter div.period-end select {
  width: 76px;
}

body.projects.index #filter div.period-start {
  position: relative;
  padding-right: 26px;
  margin-right: 0 !important;
}

body.projects.index #filter div.period-start:after {
  position: absolute;
  top: 0;
  right: 0;
  width: 26px;
  height: 16px;
  text-align: center;
  content: '-';
} 

body.projects.index #filter div.q {
  width: 600px;
}

body.projects.index #filter #q {
  width: 520px !important;
}

body.projects.index #filter div.q input[type=submit] {
  float: right;
}

/* Show */

body.projects.show #main div.tabbed-content ul.tabs li.show, 
body.project-members #main div.tabbed-content ul.tabs li.experts, 
body.project-partners #main div.tabbed-content ul.tabs li.partners,
body.projects.documents #main div.tabbed-content ul.tabs li.documents {
  background: #FFF;
  color: #555;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.33);
}

body.projects.show #main div.tabbed-content div.content ul.info li.address, 
body.projects.show #main div.tabbed-content div.content ul.info li.staff,
body.projects.show #main div.tabbed-content div.content ul.info li.focus,
body.projects.show #main div.tabbed-content div.content ul.info li.description,
body.projects.show #main div.tabbed-content div.content ul.info li.service-details {
  width: 100%;
}

/* Project Members */

body.project-members.index table td.functions {
  width: 20px;
  padding: 0 0 0 10px;
}

body.project-members.index table td.functions a {
  display: block;
  width: 20px;
  height: 20px;
  overflow: hidden;
  color: #666;
  float: left;
  font-size: 14px;
  margin: 0 4px -4px 0;
}

body.project-members.index table td.functions a:last-child {
  margin: 0 0 -4px 0;
}

body.project-members.index table td.role a {
  position: relative;
  color: #8D8D8D;
  text-shadow: 0 1px 0 #FFF;
  line-height: 15px;
  padding: 9px 24px 9px 10px;
  margin: -6px -10px -5px -10px;
}

body.project-members.index table td.role:hover a:after {
  position: absolute;
  top: 9px;
  right: 10px;
  font-family: FontAwesome;
  content: '\f040';
  font-size: 1.2em;
  font-style: normal;
  color: #555;
}

body.project-members div.overlay.project-members td a {
  display: block;
}

/* Edit / New Form */

body.projects.edit select#lang,
body.projects.new select#lang {
  position: absolute;
  top: 18px;
  right: 12px;
}

body.projects #main div.form-wrapper.projects div.left,
body.projects #main div.form-wrapper.projects div.right {
  float: left;
  width: 350px;
}

body.projects #main div.form-wrapper.projects input[type=text],
body.projects #main div.form-wrapper.projects select {
  width: 350px;
}

body.projects #main div.form-wrapper.projects textarea {
  width: 720px;
  height: 150px;
  margin-bottom: 20px;
}

body.projects #main div.form-wrapper.projects div.carried-proportion,
body.projects #main div.form-wrapper.projects div.carried-proportion input {
  width: 120px;
}

body.projects #main div.form-wrapper.projects div.title input {
  width: 580px;
}

body.projects #main div.form-wrapper.projects div.region {
  margin: 10px 0 0 0;
}

body.projects #main div.form-wrapper.projects div.address textarea {
  height: 82px;
  width: 350px;
}

body.projects #main div.form-wrapper.projects div.start,
body.projects #main div.form-wrapper.projects div.end {
  float: right;  
  width: 250px;
}

body.projects #main div.form-wrapper.projects div.end {
  margin-right: 0;
  margin-left: 10px;
}

body.projects #main div.form-wrapper.projects div.start select,
body.projects #main div.form-wrapper.projects div.end select {
  width: 25%;
  margin-right: 3%;
}

body.projects #main div.form-wrapper.projects div.start select:nth-child(3),
body.projects #main div.form-wrapper.projects div.end select:nth-child(3) {
  width: 40%;
}

body.projects #main div.form-wrapper.projects div.start select:last-child,
body.projects #main div.form-wrapper.projects div.end select:last-child {
  margin-right: 0;
}

body.projects #main div.form-wrapper.projects div.status,
body.projects #main div.form-wrapper.projects div.status select {
  float: right;
  width: 100px;
}

body.projects.new #main div.form-wrapper.projects div.title {
  margin-bottom: 15px;
}

body.projects #main div.form-wrapper.projects div.country,
body.projects #main div.form-wrapper.projects div.region {
  float: left;
}

body.projects #main div.form-wrapper.projects div.address {
  float: left;
}

body.projects #main div.form-wrapper.projects div.client {
  float: left;
  margin-bottom: 10px;
}

body.projects #main div.form-wrapper.projects div.submit {
  padding-top: 20px;
}