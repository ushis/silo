/**
 * users.css.erb
 *
 * Users section style definitions
 */
/* Main */
body.users.index #main,
body.users.edit #main {
  padding: 12px 20px;
}

body.users.edit #main,
body.users.new #main {
  width: 880px;
}

body.users.edit #main div.row,
body.users.new #main div.row {
  width: 860px;
}

/* Tables */
body.users #main table td.icons {
  width: 10px;
  background: #f5f5f5;
}

body.users #main table td.icons ul li {
  margin-bottom: 8px;
}

body.users #main table td.icons ul li:last-child {
  margin-bottom: 0;
}

body.users #main table td.privileges span {
  margin-right: 10px;
  padding-right: 16px;
}

/* Index Table */
body.users #main table.users td:first-child {
  padding-left: 55px;
  background-color: #efefef;
  background-position: 20px center;
}

/* Form */
body.users div.form-wrapper div.row ul {
  width: 48%;
  box-sizing: border-box;
}

body.users div.form-wrapper div.row ul:first-child {
  float: left;
}

body.users div.form-wrapper div.row ul:last-child {
  float: right;
}

body.users div.form-wrapper div.row ul li {
  float: left;
  width: 100%;
  padding-bottom: 10px;
}

body.users #main form label.check-box-label,
body.users #main form label.select-box-label {
  display: inline;
}

#main div.form-wrapper form input[type=submit] {
  position: absolute;
  bottom: 0;
  right: 0;
}

body.users #main div.form-wrapper form input[type=submit] {
  position: relative;
  float: right;
  margin: 0;
}

body.users #main div.form-wrapper div.row {
  border-bottom: 0;
  box-shadow: none;
  margin-bottom: 0;
}

body.users #main li.privileges input[type="checkbox"] {
  display: none;
}

body.users #main li.privileges input[type="checkbox"] + label {
  float: right;
  cursor: pointer;
  display: block;
  color: #444;
  padding: 6px 10px 5px 30px;
  margin-left: 10px;
  background: #f0f0f0 url('<%= asset_data_uri 'icon_locked.png' %>') left center no-repeat;
  border-radius: 3px;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .4);
}

body.users #main li.privileges input[type="checkbox"]:checked + label {
  color: #000;
  text-shadow: none;
  background: #bfbfbf url('<%= asset_data_uri 'icon_unlocked.png' %>') left center no-repeat;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.4);
}

body.users #main li.privileges.disabled input[type="checkbox"] + label,
body.users #main li.privileges.disabled input[type="checkbox"]:checked + label {
  opacity: .5;
  cursor: default;
}

body.users #main li.privileges input[type="checkbox"] + label:last-child {
  float: left;
  margin-left: 0;
}

