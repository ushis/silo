/**
 * general.css.erb
 *
 * General style definitions
 */
/* Elements */
body {
  background-color: #3a3a3a;
  min-width: 1130px;
}

a, form.button_to input[type=submit] {
  margin: 0;
  padding: 0;
  font-size: 1em;
  color: #d0d0d0;
  background-color: transparent;
  border: 0 none transparent;
  cursor: pointer;
}

a.disabled {
  cursor: default;
}

h1 {
  text-transform: uppercase;
}

h2 {
  padding: 8px 0;
  font-size: 1.2em;
  color: #444;
}

em {
  font-style: italic;
}

strong {
  font-weight: bold;
}

div.clear {
  height: 0;
  width: 0;
  visibility: hidden;
  clear: both;
}

/* Everybody needs one. */
#wrapper {
  float: left;
  width: 100%;
  padding: 0 10px 10px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

/* Header */
#header {
  width: 100%;
  float: left;
  padding: 0 20px;
  line-height: 60px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#header h1 {
  float: left;
  margin-left: -10px;
  text-indent: -99999px;
}

#header h1 a {
  display: block;
  width: 83px;
}

#user-tools {
  float: right;
  margin:  16px -20px 0 0;
  border: 2px solid #4f4f4f;
  border-radius: 2px;
}

#user-tools li {
  float: right;
  font-size: 12px;
}

#user-tools li:first-child {
  border-left: 1px solid #4f4f4f;
}

#user-tools li a {
  display: block;
  line-height: 24px;
  padding: 0 10px;
}

#user-tools li input[type=submit] {
  display: block;
  margin: 0;
  padding: 4px 10px 5px 10px;
}

#user-tools li a:hover,
#user-tools li input[type=submit]:hover {
  background-color: #353535;
}

#user-tools li input[type=submit] {
  padding-right: 26px;
}

/* Navigation */
#nav {
  float: left;
  width: 100%;
  font-size: .8em;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul {
  float: left;
  width: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li {
  float: left;
  width: 20%;
  max-width: 290px;
  padding: 0 2px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#nav ul li.users {
  width: 15%;
}

#nav ul li:first-child {
  padding-left: 0;
}

#nav ul li:nth-child(n+4) {
  float: right;
  padding-right: 0;
}

#nav ul li a {
  font-size: .9em;
  display: block;
  padding: 8px 20px;
  text-align: center;
  text-transform: uppercase;
  background: -moz-linear-gradient(top, #515151 0%, #464646 100%);
  background: -webkit-linear-gradient(top, #515151 0%, #464646 100%);
  background: -o-linear-gradient(top, #515151 0%, #464646 100%);
  background: -ms-linear-gradient(top, #515151 0%, #464646 100%);
  background: linear-gradient(to bottom, #515151 0%, #464646 100%);
  border-radius: 6px 6px 0 0;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, .5);
}

body.experts #nav li.experts a,
body.partners #nav li.partners a,
body.references #nav li.references a,
body.users #nav li.users a {
  color: #444;
  background: #dbdbdb;
  text-shadow: 1px 1px 0px #efefef;
}

/* Content */
#content {
  clear: both;
  padding: 10px 0;
  background-color: #dbdbdb;
  border-radius: 0 0 4px 4px;
}

/* Sidebar */
#sidebar {
  position: absolute;
  width: 80px;
  padding: 4px 10px 0 10px;
  font-size: .7em;
}

#sidebar ul li {
  padding: 14px 0 10px;
  border-bottom: 1px solid #c9c9c9;
  box-shadow: 0 1px 0 #e9e9e9;
}

#sidebar ul li a {
  display: block;
  padding-top: 22px;
  color: #222;
  text-align: center;
  background-color: transparent;
  background-position: center top;
  background-repeat: no-repeat;
}

body.index #sidebar ul li.index,
body.new #sidebar li.new {
  margin: -4px -10px 0 0;
  padding-top: 18px;
  background-color: #f9f9f9;
  border: 0 none transparent;
  border-radius: 4px 0 0 4px;
  box-shadow: -1px 1px 1px rgba(0, 0, 0, .2);
}

/* Main */
#main {
  margin: 0 10px 0 100px;
  padding: 18px 20px;
  background-color: #f9f9f9;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

body.index #main {
  border-top-left-radius: 0;
}

/* Main Header & Form Wrapper */
#main div.header,
#main div.form-wrapper {
  float: left;
  position: relative;
  width: 100%;
  margin: -8px 0 -8px -10px;
  padding: 10px;
  background: #dbdbdb;
  border-radius: 4px;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2);
}

#main div.header {
  margin-bottom: 30px;
}

#main div.header h2,
#main div.form-wrapper h2 {
  padding: 0;
  line-height: 1em;
  text-shadow: 1px 1px 0px #efefef;
  margin-bottom: 10px;
}

#main div.form-wrapper h2 {
  padding: 10px 0 0 10px;
}

body.new #main  h2 {
  display: none;
}

body.edit #main h2 {
  margin-bottom: 20px;
  padding: 0 0 0 32px;
}

#main div.header h3 {
  padding: 0;
  font-size: .75em;
  color: #888;
  line-height: 1em;
  text-shadow: 1px 1px 0px #efefef;
  margin-bottom: 10px;
}

#main div.header ul.tools {
  position: absolute;
  top: 5px;
  right: 10px;
  font-size: .8em;
  color: #666;
}

#main div.header ul.tools li {
  float: left;
  margin-left: 15px;
}

#main div.header ul.tools li a {
  float: left;
  padding: 2px 0 0 18px;
  color: #444;
  text-shadow: 1px 1px 0 #efefef;
  font-size: 1em;
}

/* Tables */
#main table {
  width: 100%;
  color: #5b5b5b;
  clear: left;
  font-size: .75em;
  border-collapse: separate;
  border-spacing: 0 8px;
}

#main table td {
  padding: 7px 10px 5px 10px;
  background-color: #efefef;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .2);
}

#main table td:first-child {
  border-radius: 4px 0 0 4px;
  background-color: #f7f7f7;
  border-left: none;
}

#main table td:last-child {
  border-radius: 0 4px 4px 0;
}

#main table td a {
  color: #444;
}

#main table td.icons a,
#main table td.icons input[type=submit] {
  display: block;
  width: 12px;
  height: 12px;
  text-indent: -99999px;
  background-position: left center;
  background-repeat: no-repeat;
}

#main table td.icons input[type=submit].delete {
  padding: 0;
  margin: 0;
  text-shadow: none;
  box-shadow: none;
  border: none;
}

/* Forms */
#main form {
  position: relative;
}

/*REMOVE*/
#main form div.field_with_errors label:after {
  content: '!';
  float: right;
  font-weight: bold;
  color: #f33;
  display: none;
}

#main input[type=submit],
div.button {
  float: left;
  cursor: pointer;
  padding: 6px 14px 7px 14px;
  margin-left: 5px;
  font-size: .7em;
  font-weight: bold;
  color: #444;
  border: none;
  background: #f0f0f0;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, 1);
  border-radius: 3px;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, .5), 0 1px 1px rgba(0, 0, 0, .4);
}

div.button {
  padding: 5px 14px;
}

#main input[type=submit]:hover,
div.button:hover {
  color: #222;
  text-shadow: 1px 1px 0px rgba(255, 255, 255, .2);
  background: rgb(236,236,236);
  background: -moz-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -webkit-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -o-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: -ms-linear-gradient(top, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);
  background: linear-gradient(top bottom, rgba(236,236,236,1) 0%, rgba(227,227,227,1) 100%);

}

#main div.form-wrapper > form {
  padding: 10px;
}

#main form p, #main form table {
  margin: 10px 0;
  padding: 0 10px 10px 10px;
  font-size: 1em;
}

#main form table {
  border-spacing: 0;
}

#main form div.field-box p:last-child,
#main form div.field-box table:last-child,
#main form div.field-box.buttons table,
#main form div.field-box.buttons p {
  padding-bottom: 0;
  border: none;
}

#main form textarea,
#main form input[type=text],
#main form input[type=password],
#main div.header input[type=text] {
  float: left;
  height: 100%;
  padding: 7px 10px 5px 10px;
  background: #f0f0f0;
  color: #000;
  font-size: 12px;
  line-height: 15px;
  border: none;
  border-radius: 3px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3);
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main form textarea:focus,
#main form input[type=text]:focus,
#main form input[type=password]:focus,
#main div.header input[type=text]:focus {
  background: #f5f5f5;
  color: #444;
}

#main div.form-wrapper form div.field_with_errors input[type=text]{
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .3), inset 0 -2px 0 rgba(170, 20, 40, .8);
}


#main form div.field-box.buttons * {
  float: right;
}

#main form table td,
#main form table td:first-child,
#main form table td:last-child {
  padding: 0 10px 0 0;
  background: transparent;
  box-shadow: none;
}

#main form table td:last-child {
  padding: 0;
}

#main form label {
  display: block;
  color: #888;
  font-size: .7em;
  padding: 0 2px 4px 2px;
  font-weight: bold;
  text-shadow: 1px 1px 0 #EEE;
  cursor: pointer;
}

#main div.form-wrapper form textarea,
#main div.form-wrapper form input[type=text],
#main div.form-wrapper form input[type=password] {
  margin: 0;
  width: 100%;
}

#main div.form-wrapper div.row {
  width: 721px;
  float: left;
  position: relative;
  padding-bottom: 10px;
  margin-bottom: 10px;
  margin-right: 100%;
  border-bottom: 1px solid #BBB;
  box-shadow: 0 1px 0px #EFEFEF;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

#main div.form-wrapper div.row:last-child {
  border-bottom: 0;
  box-shadow: none;
  margin-bottom: 0;
}

#main div.form-wrapper div.row > div {
  float: left;
  margin-right: 20px;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
